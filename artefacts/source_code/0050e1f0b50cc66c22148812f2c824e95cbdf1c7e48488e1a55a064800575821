public static TextClassifier getDefaultTextClassifierImplementation(@NonNull Context context){
    final String defaultTextClassifierPackageName = context.getPackageManager().getDefaultTextClassifierPackageName();
    if (TextUtils.isEmpty(defaultTextClassifierPackageName)) {
        return TextClassifier.NO_OP;
    }
    if (defaultTextClassifierPackageName.equals(context.getPackageName())) {
        throw new RuntimeException("The default text classifier itself should not call the" + "getDefaultTextClassifierImplementation() method.");
    }
    final TextClassificationManager tcm = context.getSystemService(TextClassificationManager.class);
    return tcm.getTextClassifier(TextClassifier.DEFAULT_SYSTEM);
}