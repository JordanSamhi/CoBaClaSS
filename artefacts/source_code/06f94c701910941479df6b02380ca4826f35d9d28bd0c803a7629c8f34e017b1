public boolean isAlive(){
    if (mClosed) {
        return false;
    }
    int state = getState();
    switch(state) {
        case State.IDLE:
        case State.INITIATED:
        case State.NEGOTIATING:
        case State.ESTABLISHING:
        case State.ESTABLISHED:
        case State.RENEGOTIATING:
        case State.REESTABLISHING:
            return true;
        default:
            return false;
    }
}