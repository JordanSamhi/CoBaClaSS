public void enforceLocationPermission(String pkgName, @Nullable String featureId, int uid, @Nullable String message) throws SecurityException{
    final int result = checkLocationPermissionInternal(pkgName, featureId, uid, message);
    switch(result) {
        case ERROR_LOCATION_MODE_OFF:
            throw new SecurityException("Location mode is disabled for the device");
        case ERROR_LOCATION_PERMISSION_MISSING:
            throw new SecurityException("UID " + uid + " has no location permission");
    }
}