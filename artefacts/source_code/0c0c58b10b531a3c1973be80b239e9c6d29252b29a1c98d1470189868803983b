public void scheduleOffsetPip(Rect originalBounds, int offset, int duration, Consumer<Rect> updateBoundsCallback){
    if (shouldBlockResizeRequest()) {
        return;
    }
    if (mShouldDeferEnteringPip) {
        Log.d(TAG, "skip scheduleOffsetPip, entering pip deferred");
        return;
    }
    SomeArgs args = SomeArgs.obtain();
    args.arg1 = updateBoundsCallback;
    args.arg2 = originalBounds;
    args.argi1 = offset;
    args.argi2 = duration;
    mUpdateHandler.sendMessage(mUpdateHandler.obtainMessage(MSG_OFFSET_ANIMATE, args));
}