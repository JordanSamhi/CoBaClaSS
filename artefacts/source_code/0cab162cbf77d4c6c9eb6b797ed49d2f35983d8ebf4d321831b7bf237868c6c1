public static int addValueToLinearHistogram(int x, SparseIntArray histogram, int[] hp){
    int bucket = 0;
    for (int limit : hp) {
        if (x >= limit) {
            bucket++;
            continue;
        }
        break;
    }
    int newValue = histogram.get(bucket) + 1;
    histogram.put(bucket, newValue);
    return newValue;
}