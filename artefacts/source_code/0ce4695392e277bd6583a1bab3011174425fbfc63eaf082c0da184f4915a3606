public synchronized boolean getDefaultDataRoamingEnabled(){
    final CarrierConfigManager configMgr = (CarrierConfigManager) mPhone.getContext().getSystemService(Context.CARRIER_CONFIG_SERVICE);
    boolean isDataRoamingEnabled = "true".equalsIgnoreCase(SystemProperties.get("ro.com.android.dataroaming", "false"));
    isDataRoamingEnabled |= configMgr.getConfigForSubId(mPhone.getSubId()).getBoolean(CarrierConfigManager.KEY_CARRIER_DEFAULT_DATA_ROAMING_ENABLED_BOOL);
    return isDataRoamingEnabled;
}