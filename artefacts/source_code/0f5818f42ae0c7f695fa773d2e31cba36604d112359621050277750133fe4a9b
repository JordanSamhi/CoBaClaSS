public void startLocalOnlyHotspot(@NonNull SoftApConfiguration config, @Nullable Executor executor, @Nullable WifiManager.LocalOnlyHotspotCallback callback){
    android.net.wifi.SoftApConfiguration frameworkConfig = new android.net.wifi.SoftApConfiguration.Builder().setBssid(config.getBssid()).setSsid(config.getSsid()).setPassphrase(config.getWpa2Passphrase(), SECURITY_TYPE_WPA2_PSK).build();
    mWifiManager.startLocalOnlyHotspot(frameworkConfig, executor, callback);
}