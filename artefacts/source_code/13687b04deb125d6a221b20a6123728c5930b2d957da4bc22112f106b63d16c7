public void hideAllKeyguardButtons(boolean isSetUp){
    checkAllBars(isSetUp);
    if (mTopView != null) {
        mTopView.hideKeyguardButtons();
    }
    if (mBottomView != null) {
        mBottomView.hideKeyguardButtons();
    }
    if (mLeftView != null) {
        mLeftView.hideKeyguardButtons();
    }
    if (mRightView != null) {
        mRightView.hideKeyguardButtons();
    }
}