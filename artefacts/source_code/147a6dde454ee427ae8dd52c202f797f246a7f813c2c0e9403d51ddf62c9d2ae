public final ParcelFileDescriptor openFileDescriptor(@NonNull Uri uri, @NonNull String mode, @Nullable CancellationSignal cancellationSignal) throws FileNotFoundException{
    try {
        if (mWrapped != null)
            return mWrapped.openFile(uri, mode, cancellationSignal);
    } catch (RemoteException e) {
        return null;
    }
    AssetFileDescriptor afd = openAssetFileDescriptor(uri, mode, cancellationSignal);
    if (afd == null) {
        return null;
    }
    if (afd.getDeclaredLength() < 0) {
        return afd.getParcelFileDescriptor();
    }
    try {
        afd.close();
    } catch (IOException e) {
    }
    throw new FileNotFoundException("Not a whole file");
}