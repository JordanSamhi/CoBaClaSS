public static float brightnessIntToFloat(Context context, int brightnessInt){
    final PowerManager pm = context.getSystemService(PowerManager.class);
    final float pmMinBrightness = pm.getBrightnessConstraint(PowerManager.BRIGHTNESS_CONSTRAINT_TYPE_MINIMUM);
    final float pmMaxBrightness = pm.getBrightnessConstraint(PowerManager.BRIGHTNESS_CONSTRAINT_TYPE_MAXIMUM);
    final int minBrightnessInt = Math.round(brightnessFloatToIntRange(pmMinBrightness, PowerManager.BRIGHTNESS_MIN, PowerManager.BRIGHTNESS_MAX, PowerManager.BRIGHTNESS_OFF + 1, PowerManager.BRIGHTNESS_ON));
    final int maxBrightnessInt = Math.round(brightnessFloatToIntRange(pmMaxBrightness, PowerManager.BRIGHTNESS_MIN, PowerManager.BRIGHTNESS_MAX, PowerManager.BRIGHTNESS_OFF + 1, PowerManager.BRIGHTNESS_ON));
    return brightnessIntToFloat(brightnessInt, minBrightnessInt, maxBrightnessInt, pmMinBrightness, pmMaxBrightness);
}