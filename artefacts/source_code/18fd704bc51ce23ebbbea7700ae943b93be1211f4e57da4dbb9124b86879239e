public void backupObb(@UserIdInt int userId, PackageInfo packageInfo){
    Environment.UserEnvironment userEnv = new Environment.UserEnvironment(userId);
    File obbDir = userEnv.buildExternalStorageAppObbDirs(packageInfo.packageName)[0];
    if (obbDir != null) {
        if (MORE_DEBUG) {
            Log.i(TAG, "obb dir: " + obbDir.getAbsolutePath());
        }
        File[] obbFiles = obbDir.listFiles();
        if (obbFiles != null) {
            String obbDirName = obbDir.getAbsolutePath();
            for (File obb : obbFiles) {
                FullBackup.backupToTar(packageInfo.packageName, FullBackup.OBB_TREE_TOKEN, null, obbDirName, obb.getAbsolutePath(), mOutput);
            }
        }
    }
}