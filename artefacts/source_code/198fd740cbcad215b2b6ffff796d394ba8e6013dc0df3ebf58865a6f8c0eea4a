public SubscriptionInfo getSubscriptionInfo(int subId){
    for (SubscriptionInfo subInfo : mCacheActiveSubInfoList) {
        if (subInfo.getSubscriptionId() == subId) {
            return subInfo;
        }
    }
    for (SubscriptionInfo subInfo : mCacheOpportunisticSubInfoList) {
        if (subInfo.getSubscriptionId() == subId) {
            return subInfo;
        }
    }
    List<SubscriptionInfo> subInfoList = getSubInfo(SubscriptionManager.UNIQUE_KEY_SUBSCRIPTION_ID + "=" + subId, null);
    if (subInfoList == null || subInfoList.isEmpty())
        return null;
    return subInfoList.get(0);
}