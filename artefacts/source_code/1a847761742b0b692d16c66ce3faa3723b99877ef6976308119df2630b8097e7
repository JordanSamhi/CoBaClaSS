public Builder setTextForDeviceCredential(@Nullable CharSequence title, @Nullable CharSequence subtitle, @Nullable CharSequence description){
    if (title != null) {
        mBundle.putCharSequence(KEY_DEVICE_CREDENTIAL_TITLE, title);
    }
    if (subtitle != null) {
        mBundle.putCharSequence(KEY_DEVICE_CREDENTIAL_SUBTITLE, subtitle);
    }
    if (description != null) {
        mBundle.putCharSequence(KEY_DEVICE_CREDENTIAL_DESCRIPTION, description);
    }
    return this;
}