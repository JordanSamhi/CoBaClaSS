public boolean usesStandardHeader(){
    if (mN.mUsesStandardHeader) {
        return true;
    }
    if (mContext.getApplicationInfo().targetSdkVersion >= Build.VERSION_CODES.N) {
        if (mN.contentView == null && mN.bigContentView == null) {
            return true;
        }
    }
    boolean contentViewUsesHeader = mN.contentView == null || STANDARD_LAYOUTS.contains(mN.contentView.getLayoutId());
    boolean bigContentViewUsesHeader = mN.bigContentView == null || STANDARD_LAYOUTS.contains(mN.bigContentView.getLayoutId());
    return contentViewUsesHeader && bigContentViewUsesHeader;
}