public void onInitializeMenu(Menu menu){
    loadSupportedActivities();
    final int size = mSupportedActivities.size();
    for (int i = 0; i < size; i++) {
        final ResolveInfo resolveInfo = mSupportedActivities.get(i);
        menu.add(Menu.NONE, Menu.NONE, Editor.MENU_ITEM_ORDER_PROCESS_TEXT_INTENT_ACTIONS_START + i, getLabel(resolveInfo)).setIntent(createProcessTextIntentForResolveInfo(resolveInfo)).setShowAsAction(MenuItem.SHOW_AS_ACTION_NEVER);
    }
}