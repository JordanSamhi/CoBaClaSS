public static String escapeForLike(@NonNull String arg){
    final StringBuilder sb = new StringBuilder();
    for (int i = 0; i < arg.length(); i++) {
        final char c = arg.charAt(i);
        switch(c) {
            case '%':
                sb.append('\\');
                break;
            case '_':
                sb.append('\\');
                break;
        }
        sb.append(c);
    }
    return sb.toString();
}