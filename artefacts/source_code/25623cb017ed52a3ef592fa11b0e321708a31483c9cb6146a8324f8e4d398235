public String getName(){
    final IBluetooth service = sService;
    if (service == null) {
        Log.e(TAG, "BT not enabled. Cannot get Remote Device name");
        return null;
    }
    try {
        String name = service.getRemoteName(this);
        if (name != null) {
            return name.replaceAll("[\\t\\n\\r]+", " ");
        }
        return null;
    } catch (RemoteException e) {
        Log.e(TAG, "", e);
    }
    return null;
}