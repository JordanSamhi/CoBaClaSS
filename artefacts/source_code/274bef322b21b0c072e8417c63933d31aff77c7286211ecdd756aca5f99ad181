public void setDelegatedScopes(@NonNull ComponentName admin, @NonNull String delegatePackage, @NonNull List<String> scopes){
    throwIfParentInstance("setDelegatedScopes");
    if (mService != null) {
        try {
            mService.setDelegatedScopes(admin, delegatePackage, scopes);
        } catch (RemoteException e) {
            throw e.rethrowFromSystemServer();
        }
    }
}