public final View autofillClientFindViewByAccessibilityIdTraversal(int viewId, int windowId){
    final ArrayList<ViewRootImpl> roots = WindowManagerGlobal.getInstance().getRootViews(getActivityToken());
    for (int rootNum = 0; rootNum < roots.size(); rootNum++) {
        final View rootView = roots.get(rootNum).getView();
        if (rootView != null && rootView.getAccessibilityWindowId() == windowId) {
            final View view = rootView.findViewByAccessibilityIdTraversal(viewId);
            if (view != null) {
                return view;
            }
        }
    }
    return null;
}