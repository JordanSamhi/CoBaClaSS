public void listen(PhoneStateListener listener, int events){
    if (mContext == null)
        return;
    boolean notifyNow = (getITelephony() != null);
    TelephonyRegistryManager telephonyRegistry = (TelephonyRegistryManager) mContext.getSystemService(Context.TELEPHONY_REGISTRY_SERVICE);
    if (telephonyRegistry != null) {
        telephonyRegistry.listenForSubscriber(mSubId, getOpPackageName(), getAttributionTag(), listener, events, notifyNow);
    } else {
        Rlog.w(TAG, "telephony registry not ready.");
    }
}