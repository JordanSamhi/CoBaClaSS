public boolean startPnoScan(@NonNull String ifaceName, @NonNull PnoSettings pnoSettings, @NonNull @CallbackExecutor Executor executor, @NonNull PnoScanRequestCallback callback){
    IWifiScannerImpl scannerImpl = getScannerImpl(ifaceName);
    if (scannerImpl == null) {
        Log.e(TAG, "No valid wificond scanner interface handler");
        return false;
    }
    if (callback == null || executor == null) {
        Log.e(TAG, "startPnoScan called with a null callback");
        return false;
    }
    try {
        boolean success = scannerImpl.startPnoScan(pnoSettings);
        if (success) {
            executor.execute(callback::onPnoRequestSucceeded);
        } else {
            executor.execute(callback::onPnoRequestFailed);
        }
        return success;
    } catch (RemoteException e1) {
        Log.e(TAG, "Failed to start pno scan due to remote exception");
    }
    return false;
}