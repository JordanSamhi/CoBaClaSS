public boolean isRadioOn(){
    try {
        ITelephony telephony = getITelephony();
        if (telephony != null)
            return telephony.isRadioOnWithFeature(getOpPackageName(), getAttributionTag());
    } catch (RemoteException e) {
        Log.e(TAG, "Error calling ITelephony#isRadioOn", e);
    }
    return false;
}