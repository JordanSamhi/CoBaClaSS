public UiccCardApplication getApplicationByType(int type){
    synchronized (mLock) {
        for (int i = 0; i < mUiccApplications.length; i++) {
            if (mUiccApplications[i] != null && mUiccApplications[i].getType().ordinal() == type) {
                return mUiccApplications[i];
            }
        }
        return null;
    }
}