public static AudioAttributes getAudioAttributesForStrategyWithLegacyStreamType(int streamType){
    for (final AudioProductStrategy productStrategy : AudioProductStrategy.getAudioProductStrategies()) {
        AudioAttributes aa = productStrategy.getAudioAttributesForLegacyStreamType(streamType);
        if (aa != null) {
            return aa;
        }
    }
    return new AudioAttributes.Builder().setContentType(AudioAttributes.CONTENT_TYPE_UNKNOWN).setUsage(AudioAttributes.USAGE_UNKNOWN).build();
}