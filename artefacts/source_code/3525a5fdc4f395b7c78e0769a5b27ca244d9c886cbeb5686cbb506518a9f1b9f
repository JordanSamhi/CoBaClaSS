public static String nameForState(@AdapterState int state){
    switch(state) {
        case STATE_OFF:
            return "OFF";
        case STATE_TURNING_ON:
            return "TURNING_ON";
        case STATE_ON:
            return "ON";
        case STATE_TURNING_OFF:
            return "TURNING_OFF";
        case STATE_BLE_TURNING_ON:
            return "BLE_TURNING_ON";
        case STATE_BLE_ON:
            return "BLE_ON";
        case STATE_BLE_TURNING_OFF:
            return "BLE_TURNING_OFF";
        default:
            return "?!?!? (" + state + ")";
    }
}