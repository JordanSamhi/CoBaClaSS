public void checkLength(){
    if (isNone()) {
        return;
    }
    if (isPattern()) {
        if (size() < LockPatternUtils.MIN_LOCK_PATTERN_SIZE) {
            throw new IllegalArgumentException("pattern must not be null and at least " + LockPatternUtils.MIN_LOCK_PATTERN_SIZE + " dots long.");
        }
        return;
    }
    if (isPassword() || isPin()) {
        if (size() < LockPatternUtils.MIN_LOCK_PASSWORD_SIZE) {
            throw new IllegalArgumentException("password must not be null and at least " + "of length " + LockPatternUtils.MIN_LOCK_PASSWORD_SIZE);
        }
        return;
    }
}