public static String getAlias(Context context){
    try {
        PackageInfo p = context.getPackageManager().getPackageInfo(context.getPackageName(), PackageManager.GET_ACTIVITIES | PackageManager.MATCH_DISABLED_COMPONENTS);
        for (ActivityInfo activityInfo : p.activities) {
            String targetActivity = activityInfo.targetActivity;
            if (CaptivePortalLoginActivity.class.getName().equals(targetActivity)) {
                return activityInfo.name;
            }
        }
    } catch (PackageManager.NameNotFoundException e) {
        e.printStackTrace();
    }
    return null;
}