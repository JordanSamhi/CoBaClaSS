public QueueRequest setEncryptedLinearBlock(@NonNull LinearBlock block, int offset, int size, @NonNull MediaCodec.CryptoInfo cryptoInfo){
    Objects.requireNonNull(cryptoInfo);
    if (!isAccessible()) {
        throw new IllegalStateException("The request is stale");
    }
    if (mLinearBlock != null || mHardwareBuffer != null) {
        throw new IllegalStateException("Cannot set block twice");
    }
    mLinearBlock = block;
    mOffset = offset;
    mSize = size;
    mCryptoInfo = cryptoInfo;
    return this;
}