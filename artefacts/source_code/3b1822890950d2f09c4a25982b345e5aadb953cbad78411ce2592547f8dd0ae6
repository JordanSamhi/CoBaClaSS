public static boolean isOffloadedPlaybackSupported(@NonNull AudioFormat format, @NonNull AudioAttributes attributes){
    if (format == null) {
        throw new NullPointerException("Illegal null AudioFormat");
    }
    if (attributes == null) {
        throw new NullPointerException("Illegal null AudioAttributes");
    }
    return AudioSystem.isOffloadSupported(format, attributes);
}