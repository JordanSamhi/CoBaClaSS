public void addFocusables(ArrayList<View> views, @FocusDirection int direction, @FocusableMode int focusableMode){
    if (views == null) {
        return;
    }
    if (!canTakeFocus()) {
        return;
    }
    if ((focusableMode & FOCUSABLES_TOUCH_MODE) == FOCUSABLES_TOUCH_MODE && !isFocusableInTouchMode()) {
        return;
    }
    views.add(this);
}