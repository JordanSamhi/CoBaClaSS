public HardwareConfig getSim(int index){
    synchronized (mLock) {
        if (mSims.isEmpty()) {
            loge("getSim: no registered sim device?!?");
            return null;
        }
        if (index > getSimCount()) {
            loge("getSim: out-of-bounds access for sim device " + index + " max: " + getSimCount());
            return null;
        }
        if (DBG)
            logd("getSim: " + index);
        return mSims.get(index);
    }
}