public String getAlias(){
    final IBluetooth service = sService;
    if (service == null) {
        Log.e(TAG, "BT not enabled. Cannot get Remote Device Alias");
        return null;
    }
    try {
        String alias = service.getRemoteAlias(this);
        if (alias == null) {
            return getName();
        }
        return alias;
    } catch (RemoteException e) {
        Log.e(TAG, "", e);
    }
    return null;
}