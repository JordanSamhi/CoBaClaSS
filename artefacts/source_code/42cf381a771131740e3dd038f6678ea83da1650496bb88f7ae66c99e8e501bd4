public void writeEmergencyNumberUpdateEvent(int phoneId, EmergencyNumber emergencyNumber, int emergencyNumberDatabaseVersion){
    if (emergencyNumber == null) {
        return;
    }
    final EmergencyNumberInfo emergencyNumberInfo = convertEmergencyNumberToEmergencyNumberInfo(emergencyNumber);
    TelephonyEvent event = new TelephonyEventBuilder(phoneId).setUpdatedEmergencyNumber(emergencyNumberInfo, emergencyNumberDatabaseVersion).build();
    addTelephonyEvent(event);
}