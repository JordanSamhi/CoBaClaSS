public void add(View view, int width, int height, int displayId){
    mLp = new WindowManager.LayoutParams(width, height, TYPE_DOCK_DIVIDER, FLAG_NOT_FOCUSABLE | FLAG_NOT_TOUCH_MODAL | FLAG_WATCH_OUTSIDE_TOUCH | FLAG_SPLIT_TOUCH | FLAG_SLIPPERY, PixelFormat.TRANSLUCENT);
    mLp.token = new Binder();
    mLp.setTitle(WINDOW_TITLE);
    mLp.privateFlags |= PRIVATE_FLAG_NO_MOVE_ANIMATION;
    mLp.layoutInDisplayCutoutMode = LAYOUT_IN_DISPLAY_CUTOUT_MODE_ALWAYS;
    view.setSystemUiVisibility(View.SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN | View.SYSTEM_UI_FLAG_LAYOUT_HIDE_NAVIGATION | View.SYSTEM_UI_FLAG_LAYOUT_STABLE);
    mSystemWindows.addView(view, mLp, displayId, TYPE_DOCK_DIVIDER);
    mView = view;
}