public boolean setTaskWindowingModeSplitScreenPrimary(int taskId, boolean toTop){
    enforceCallerIsRecentsOrHasPermission(MANAGE_ACTIVITY_STACKS, "setTaskWindowingModeSplitScreenPrimary()");
    synchronized (mGlobalLock) {
        final long ident = Binder.clearCallingIdentity();
        try {
            return setTaskWindowingModeSplitScreen(taskId, WINDOWING_MODE_SPLIT_SCREEN_PRIMARY, toTop);
        } finally {
            Binder.restoreCallingIdentity(ident);
        }
    }
}