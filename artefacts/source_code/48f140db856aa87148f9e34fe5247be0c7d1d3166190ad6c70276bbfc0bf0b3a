public static String typeToString(int type){
    switch(type) {
        case TYPE_UNKNOWN:
            return "UNKNOWN";
        case TYPE_INTERNAL:
            return "INTERNAL";
        case TYPE_EXTERNAL:
            return "EXTERNAL";
        case TYPE_WIFI:
            return "WIFI";
        case TYPE_OVERLAY:
            return "OVERLAY";
        case TYPE_VIRTUAL:
            return "VIRTUAL";
        default:
            return Integer.toString(type);
    }
}