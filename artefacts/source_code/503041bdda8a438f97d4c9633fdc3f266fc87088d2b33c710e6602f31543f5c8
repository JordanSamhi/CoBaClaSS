public PointF getDefaultStartPosition(){
    boolean isRtl = mLayout != null && mLayout.getResources().getConfiguration().getLayoutDirection() == View.LAYOUT_DIRECTION_RTL;
    return new PointF(isRtl ? getAllowableStackPositionRegion().right : getAllowableStackPositionRegion().left, getAllowableStackPositionRegion().top + mStackStartingVerticalOffset);
}