public void forceCheckStateForTests(int checkStatus, PackageVersions packageVersions) throws IOException{
    synchronized (this) {
        try {
            final int initialOptimisticLockId = (int) System.currentTimeMillis();
            writePackageStatusLocked(checkStatus, initialOptimisticLockId, packageVersions);
        } catch (IOException e) {
            throw new IllegalStateException(e);
        }
    }
}