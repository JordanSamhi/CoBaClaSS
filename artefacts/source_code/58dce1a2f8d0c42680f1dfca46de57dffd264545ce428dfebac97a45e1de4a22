public final void setContentCaptureWhitelist(@Nullable Set<String> packages, @Nullable Set<ComponentName> activities){
    final IContentCaptureServiceCallback callback = mCallback;
    if (callback == null) {
        Log.w(TAG, "setContentCaptureWhitelist(): no server callback");
        return;
    }
    try {
        callback.setContentCaptureWhitelist(toList(packages), toList(activities));
    } catch (RemoteException e) {
        e.rethrowFromSystemServer();
    }
}