public static CharSequence getPermissionString(Context context, String callingPackage){
    PackageManager pm = context.getPackageManager();
    try {
        return context.getString(com.android.internal.R.string.slices_permission_request, pm.getApplicationInfo(callingPackage, 0).loadLabel(pm), context.getApplicationInfo().loadLabel(pm));
    } catch (NameNotFoundException e) {
        throw new RuntimeException("Unknown calling app", e);
    }
}