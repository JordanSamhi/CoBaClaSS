public void setVideoResource(@RawRes int videoResId, String videoResPackageName){
    if (videoResId != this.videoResId || (videoResPackageName != null && !videoResPackageName.equals(this.videoResPackageName))) {
        this.videoResId = videoResId;
        this.videoResPackageName = videoResPackageName;
        createMediaPlayer();
    }
}