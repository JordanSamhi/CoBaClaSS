public void dispatchDestroy(boolean finishing){
    final int N = mActivityArray.size();
    for (int i = 0; i < N; i++) {
        LocalActivityRecord r = mActivityArray.get(i);
        if (localLOGV)
            Log.v(TAG, r.id + ": destroying");
        mActivityThread.performDestroyActivity(r, finishing, 0, false, "LocalActivityManager::dispatchDestroy");
    }
    mActivities.clear();
    mActivityArray.clear();
}