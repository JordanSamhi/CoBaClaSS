public ContextHubTransaction<Void> enableNanoApp(@NonNull ContextHubInfo hubInfo, long nanoAppId){
    Objects.requireNonNull(hubInfo, "ContextHubInfo cannot be null");
    ContextHubTransaction<Void> transaction = new ContextHubTransaction<>(ContextHubTransaction.TYPE_ENABLE_NANOAPP);
    IContextHubTransactionCallback callback = createTransactionCallback(transaction);
    try {
        mService.enableNanoApp(hubInfo.getId(), callback, nanoAppId);
    } catch (RemoteException e) {
        throw e.rethrowFromSystemServer();
    }
    return transaction;
}