public static String bchToString(byte[] data, int offset, int length){
    StringBuilder ret = new StringBuilder(length * 2);
    for (int i = offset; i < offset + length; i++) {
        int v;
        v = data[i] & 0xf;
        ret.append(HEX_CHARS[v]);
        v = (data[i] >> 4) & 0xf;
        ret.append(HEX_CHARS[v]);
    }
    return ret.toString();
}