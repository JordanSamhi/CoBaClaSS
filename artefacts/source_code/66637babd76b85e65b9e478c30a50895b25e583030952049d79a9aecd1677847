public void setMissing(boolean missing, @UserIdInt int userId){
    if (missing) {
        if (mMissing == null) {
            mMissing = new SparseBooleanArray();
        }
        mMissing.put(userId, true);
    } else {
        if (mMissing != null) {
            mMissing.delete(userId);
            if (mMissing.size() == 0) {
                mMissing = null;
            }
        }
    }
}