public boolean isActive(){
    switch(mPlayerState) {
        case PLAYER_STATE_STARTED:
            return true;
        case PLAYER_STATE_UNKNOWN:
        case PLAYER_STATE_RELEASED:
        case PLAYER_STATE_IDLE:
        case PLAYER_STATE_PAUSED:
        case PLAYER_STATE_STOPPED:
        default:
            return false;
    }
}