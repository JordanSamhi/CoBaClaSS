public void createWithUpdateFlag(){
    final BenchmarkState state = mPerfStatusReporter.getBenchmarkState();
    while (state.keepRunning()) {
        state.pauseTiming();
        final PendingIntent previousPendingIntent = PendingIntent.getActivity(mContext, 0, mIntent, 0);
        state.resumeTiming();
        final PendingIntent pendingIntent = PendingIntent.getActivity(mContext, 0, mIntent, PendingIntent.FLAG_UPDATE_CURRENT);
        state.pauseTiming();
        previousPendingIntent.cancel();
        pendingIntent.cancel();
        state.resumeTiming();
    }
}