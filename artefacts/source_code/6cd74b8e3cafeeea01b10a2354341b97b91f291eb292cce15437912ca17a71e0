public Runnable setImageResourceAsync(@DrawableRes int resId){
    Drawable d = null;
    if (resId != 0) {
        try {
            d = getContext().getDrawable(resId);
        } catch (Exception e) {
            Log.w(LOG_TAG, "Unable to find resource: " + resId, e);
            resId = 0;
        }
    }
    return new ImageDrawableCallback(d, null, resId);
}