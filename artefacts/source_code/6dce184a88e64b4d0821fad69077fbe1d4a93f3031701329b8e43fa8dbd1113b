public static boolean isStorageManagerEnabled(Context context){
    boolean isDefaultOn;
    try {
        isDefaultOn = SystemProperties.getBoolean(STORAGE_MANAGER_ENABLED_PROPERTY, false);
    } catch (Resources.NotFoundException e) {
        isDefaultOn = false;
    }
    return Settings.Secure.getInt(context.getContentResolver(), Settings.Secure.AUTOMATIC_STORAGE_MANAGER_ENABLED, isDefaultOn ? 1 : 0) != 0;
}