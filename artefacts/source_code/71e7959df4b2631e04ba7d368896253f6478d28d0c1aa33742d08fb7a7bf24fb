public static void enforeceCallingOrSelfReadPhoneStatePermissionOrCarrierPrivilege(Context context, int subId, String message){
    if (context.checkCallingOrSelfPermission(android.Manifest.permission.READ_PHONE_STATE) == PERMISSION_GRANTED) {
        return;
    }
    if (DBG) {
        Log.d(LOG_TAG, "No READ_PHONE_STATE permission, check carrier privilege next.");
    }
    enforceCallingOrSelfCarrierPrivilege(context, subId, message);
}