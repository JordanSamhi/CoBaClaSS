public void scrollToPosition(int position){
    if (mLayoutFrozen) {
        return;
    }
    stopScroll();
    if (mLayout == null) {
        Log.e(TAG, "Cannot scroll to position a LayoutManager set. " + "Call setLayoutManager with a non-null argument.");
        return;
    }
    mLayout.scrollToPosition(position);
    awakenScrollBars();
}