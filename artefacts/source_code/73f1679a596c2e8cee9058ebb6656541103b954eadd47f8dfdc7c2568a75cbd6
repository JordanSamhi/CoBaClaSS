public boolean setOpportunistic(boolean opportunistic, int subId){
    if (VDBG)
        logd("[setOpportunistic]+ opportunistic:" + opportunistic + " subId:" + subId);
    return setSubscriptionPropertyHelper(subId, "setOpportunistic", (iSub) -> iSub.setOpportunistic(opportunistic, subId, mContext.getOpPackageName())) == 1;
}