public void checkValidPassword(byte[] password){
    logVerbose("checkValidPassword");
    if (mCurrentValidateLockTask != null && mCurrentValidateLockTask.getStatus() != AsyncTask.Status.FINISHED) {
        mCurrentValidateLockTask.cancel(true);
    }
    mCurrentValidateLockTask = new ValidateLockAsyncTask(mInitialLockListener, mInitialLockSetupService, LockTypes.PASSWORD);
    mCurrentValidateLockTask.executeOnExecutor(AsyncTask.THREAD_POOL_EXECUTOR, password);
}