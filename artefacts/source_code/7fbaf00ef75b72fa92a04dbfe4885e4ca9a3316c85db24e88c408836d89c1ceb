public static boolean hasPermissions(Context context, @Nullable PermissionsCheckListener permissionsCheckListener){
    for (String permission : REQUIRED_PERMISSIONS) {
        final boolean granted = checkPermission(context, permission) == PackageManager.PERMISSION_GRANTED;
        if (permissionsCheckListener != null) {
            permissionsCheckListener.onPermissionCheck(permission, granted);
        }
        if (!granted) {
            return false;
        }
    }
    return true;
}