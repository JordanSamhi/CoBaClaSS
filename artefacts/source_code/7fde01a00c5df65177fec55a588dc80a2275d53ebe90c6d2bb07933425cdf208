public static Drawable getRestrictedPadlock(Context context){
    Drawable restrictedPadlock = context.getDrawable(android.R.drawable.ic_info);
    final int iconSize = context.getResources().getDimensionPixelSize(android.R.dimen.config_restrictedIconSize);
    TypedArray ta = context.obtainStyledAttributes(new int[] { android.R.attr.colorAccent });
    int colorAccent = ta.getColor(0, 0);
    ta.recycle();
    restrictedPadlock.setTint(colorAccent);
    restrictedPadlock.setBounds(0, 0, iconSize, iconSize);
    return restrictedPadlock;
}