public boolean isSubscriptionVisible(SubscriptionInfo info){
    if (info == null)
        return false;
    if (info.getGroupUuid() == null || !info.isOpportunistic())
        return true;
    boolean hasCarrierPrivilegePermission = TelephonyManager.from(mContext).hasCarrierPrivileges(info.getSubscriptionId()) || canManageSubscription(info);
    return hasCarrierPrivilegePermission;
}