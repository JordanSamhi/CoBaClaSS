public boolean overrideTokenDisplayAdjustments(IBinder token, @Nullable Consumer<DisplayAdjustments> override){
    boolean handled = false;
    synchronized (this) {
        final ActivityResources tokenResources = mActivityResourceReferences.get(token);
        if (tokenResources == null) {
            return false;
        }
        final ArrayList<WeakReference<Resources>> resourcesRefs = tokenResources.activityResources;
        for (int i = resourcesRefs.size() - 1; i >= 0; i--) {
            final Resources res = resourcesRefs.get(i).get();
            if (res != null) {
                res.overrideDisplayAdjustments(override);
                handled = true;
            }
        }
    }
    return handled;
}