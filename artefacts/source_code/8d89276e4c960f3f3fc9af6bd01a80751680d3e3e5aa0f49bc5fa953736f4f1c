public boolean onPackageFailureLocked(String packageName){
    if (packages.get(packageName) == null && registeredObserver.isPersistent() && registeredObserver.mayObservePackage(packageName)) {
        packages.put(packageName, sPackageWatchdog.newMonitoredPackage(packageName, DEFAULT_OBSERVING_DURATION_MS, false));
    }
    MonitoredPackage p = packages.get(packageName);
    if (p != null) {
        return p.onFailureLocked();
    }
    return false;
}