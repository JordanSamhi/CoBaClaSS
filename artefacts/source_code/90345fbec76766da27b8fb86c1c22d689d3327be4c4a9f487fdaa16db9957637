public Pair<Integer, String> getSpecificNetworkRequestUidAndPackageName(@NonNull WifiConfiguration connectedNetwork){
    if (mUserSelectedNetwork == null || connectedNetwork == null) {
        return Pair.create(Process.INVALID_UID, "");
    }
    if (!isUserSelectedNetwork(connectedNetwork)) {
        Log.w(TAG, "Connected to unknown network " + connectedNetwork + ". Ignoring...");
        return Pair.create(Process.INVALID_UID, "");
    }
    if (mConnectedSpecificNetworkRequestSpecifier != null) {
        return Pair.create(mConnectedSpecificNetworkRequest.getRequestorUid(), mConnectedSpecificNetworkRequest.getRequestorPackageName());
    }
    if (mActiveSpecificNetworkRequestSpecifier != null) {
        return Pair.create(mActiveSpecificNetworkRequest.getRequestorUid(), mActiveSpecificNetworkRequest.getRequestorPackageName());
    }
    return Pair.create(Process.INVALID_UID, "");
}