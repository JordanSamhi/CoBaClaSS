public Metadata getMetadata(final boolean update_only, final boolean apply_filter){
    Parcel reply = Parcel.obtain();
    Metadata data = new Metadata();
    if (!native_getMetadata(update_only, apply_filter, reply)) {
        reply.recycle();
        return null;
    }
    if (!data.parse(reply)) {
        reply.recycle();
        return null;
    }
    return data;
}