public boolean isProjected(){
    if (super.isProjected()) {
        return true;
    }
    final ChildDrawable[] layers = mLayerState.mChildren;
    for (int i = 0; i < mLayerState.N_CHILDREN; i++) {
        if (layers[i].mDrawable != null && layers[i].mDrawable.isProjected()) {
            return true;
        }
    }
    return false;
}