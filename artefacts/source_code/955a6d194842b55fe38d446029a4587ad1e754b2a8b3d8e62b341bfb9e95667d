public static int dampedScroll(float amount, int max){
    if (Float.compare(amount, 0) == 0)
        return 0;
    float f = amount / max;
    f = f / (Math.abs(f)) * (overScrollInfluenceCurve(Math.abs(f)));
    if (Math.abs(f) >= 1) {
        f /= Math.abs(f);
    }
    return Math.round(OVERSCROLL_DAMP_FACTOR * f * max);
}