public void sendVisualVoicemailSmsForSubscriber(String callingPackage, String callingAttributionTag, int subId, String number, int port, String text, PendingIntent sentIntent){
    if (port == 0) {
        sendTextForSubscriberWithSelfPermissionsInternal(subId, callingPackage, callingAttributionTag, number, null, text, sentIntent, null, false, true);
    } else {
        byte[] data = text.getBytes(StandardCharsets.UTF_8);
        sendDataForSubscriberWithSelfPermissionsInternal(subId, callingPackage, callingAttributionTag, number, null, (short) port, data, sentIntent, null, true);
    }
}