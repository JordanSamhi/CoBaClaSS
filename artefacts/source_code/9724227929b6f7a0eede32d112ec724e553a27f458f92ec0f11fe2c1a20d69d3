public List<Button> inflateRepliesFromRemoteInput(@NonNull SmartReplies smartReplies, SmartReplyController smartReplyController, NotificationEntry entry, boolean delayOnClickListener){
    List<Button> buttons = new ArrayList<>();
    if (smartReplies.remoteInput != null && smartReplies.pendingIntent != null) {
        if (smartReplies.choices != null) {
            for (int i = 0; i < smartReplies.choices.size(); ++i) {
                buttons.add(inflateReplyButton(this, getContext(), i, smartReplies, smartReplyController, entry, delayOnClickListener));
            }
            this.mSmartRepliesGeneratedByAssistant = smartReplies.fromAssistant;
        }
    }
    return buttons;
}