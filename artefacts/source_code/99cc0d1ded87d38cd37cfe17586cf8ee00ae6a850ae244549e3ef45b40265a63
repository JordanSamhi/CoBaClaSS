public boolean setAlwaysAllowMmsData(boolean alwaysAllow){
    try {
        ITelephony service = getITelephony();
        if (service != null) {
            return service.setAlwaysAllowMmsData(getSubId(), alwaysAllow);
        }
    } catch (RemoteException ex) {
        if (!isSystemProcess()) {
            ex.rethrowAsRuntimeException();
        }
    }
    return false;
}