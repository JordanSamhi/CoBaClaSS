public boolean isApnMetered(@ApnType int apnType){
    try {
        ITelephony service = getITelephony();
        if (service != null) {
            return service.isApnMetered(apnType, getSubId());
        }
    } catch (RemoteException ex) {
        if (!isSystemProcess()) {
            ex.rethrowAsRuntimeException();
        }
    }
    return true;
}