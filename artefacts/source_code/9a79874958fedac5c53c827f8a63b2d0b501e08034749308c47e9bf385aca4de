public static KeyButtonDrawable create(@NonNull Context ctx, @DrawableRes int icon, boolean hasShadow, Color ovalBackgroundColor){
    final int dualToneDarkTheme = Utils.getThemeAttr(ctx, R.attr.darkIconTheme);
    final int dualToneLightTheme = Utils.getThemeAttr(ctx, R.attr.lightIconTheme);
    Context lightContext = new ContextThemeWrapper(ctx, dualToneLightTheme);
    Context darkContext = new ContextThemeWrapper(ctx, dualToneDarkTheme);
    return KeyButtonDrawable.create(lightContext, darkContext, icon, hasShadow, ovalBackgroundColor);
}