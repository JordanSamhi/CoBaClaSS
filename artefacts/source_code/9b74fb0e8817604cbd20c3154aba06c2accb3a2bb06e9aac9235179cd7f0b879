public float getExpandedY(){
    if (mLayout == null || mLayout.getRootWindowInsets() == null) {
        return 0;
    }
    final WindowInsets insets = mLayout.getRootWindowInsets();
    return mBubblePaddingTop + Math.max(mStatusBarHeight, insets.getDisplayCutout() != null ? insets.getDisplayCutout().getSafeInsetTop() : 0);
}