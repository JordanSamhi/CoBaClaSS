public void reconnect(final Handler handler, final CameraOpenCallback cb){
    try {
        getDispatchThread().runJob(new Runnable() {

            @Override
            public void run() {
                getCameraHandler().obtainMessage(CameraActions.RECONNECT, getCameraId(), 0, CameraOpenCallbackForward.getNewInstance(handler, cb)).sendToTarget();
            }
        });
    } catch (final RuntimeException ex) {
        getAgent().getCameraExceptionHandler().onDispatchThreadException(ex);
    }
}