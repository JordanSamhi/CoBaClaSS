public boolean isConcurrentVoiceAndDataAllowed(){
    if (mSS.getCssIndicator() == 1) {
        return true;
    } else if (mPhone.isPhoneTypeGsm()) {
        int radioTechnology = mSS.getRilDataRadioTechnology();
        if (radioTechnology == ServiceState.RIL_RADIO_TECHNOLOGY_UNKNOWN && mSS.getDataRegistrationState() != ServiceState.STATE_IN_SERVICE) {
            radioTechnology = mSS.getRilVoiceRadioTechnology();
        }
        return radioTechnology != ServiceState.RIL_RADIO_TECHNOLOGY_UNKNOWN && ServiceState.rilRadioTechnologyToAccessNetworkType(radioTechnology) != AccessNetworkType.GERAN;
    } else {
        return false;
    }
}