public void drawBitmapWithCircleOnCanvas(Bitmap bitmap, Canvas canvas, RectF source, RectF dest){
    BitmapShader shader = new BitmapShader(bitmap, Shader.TileMode.CLAMP, Shader.TileMode.CLAMP);
    matrix.reset();
    matrix.setRectToRect(source, dest, Matrix.ScaleToFit.FILL);
    shader.setLocalMatrix(matrix);
    bitmapPaint.setShader(shader);
    canvas.drawCircle(dest.centerX(), dest.centerY(), dest.width() / 2f, bitmapPaint);
    canvas.drawCircle(dest.centerX(), dest.centerY(), dest.width() / 2f - circularImageBorder / 2, borderPaint);
}