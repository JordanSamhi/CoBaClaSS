public static long copyInternalSplice(FileDescriptor in, FileDescriptor out, long count, CancellationSignal signal, Executor executor, ProgressListener listener) throws ErrnoException{
    long progress = 0;
    long checkpoint = 0;
    long t;
    while ((t = Os.splice(in, null, out, null, Math.min(count, COPY_CHECKPOINT_BYTES), SPLICE_F_MOVE | SPLICE_F_MORE)) != 0) {
        progress += t;
        checkpoint += t;
        count -= t;
        if (checkpoint >= COPY_CHECKPOINT_BYTES) {
            if (signal != null) {
                signal.throwIfCanceled();
            }
            if (executor != null && listener != null) {
                final long progressSnapshot = progress;
                executor.execute(() -> {
                    listener.onProgress(progressSnapshot);
                });
            }
            checkpoint = 0;
        }
    }
    if (executor != null && listener != null) {
        final long progressSnapshot = progress;
        executor.execute(() -> {
            listener.onProgress(progressSnapshot);
        });
    }
    return progress;
}