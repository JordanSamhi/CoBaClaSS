public ResolveInfo resolveActivity(Intent intent, @ResolveInfoFlags int flags){
    final String resolvedType = intent.resolveTypeIfNeeded(AppGlobals.getInitialApplication().getContentResolver());
    try {
        return mIPackageManager.resolveIntent(intent, resolvedType, flags, UserHandle.getCallingUserId());
    } catch (RemoteException e) {
        e.printStackTrace();
        return null;
    }
}