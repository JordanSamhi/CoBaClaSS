public void update(){
    if (mWindow != null) {
        obtainSurfaces();
        if (!mDirtyState) {
            performPixelCopy(mPrevStartCoordsInSurface.x, mPrevStartCoordsInSurface.y, false);
        } else {
            show(mPrevShowSourceCoords.x, mPrevShowSourceCoords.y, mPrevShowWindowCoords.x, mPrevShowWindowCoords.y);
        }
    }
}