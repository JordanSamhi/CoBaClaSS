public boolean isUsingCarrierAggregation(){
    boolean isUsingCa = false;
    NetworkRegistrationInfo nri = getNetworkRegistrationInfo(NetworkRegistrationInfo.DOMAIN_PS, AccessNetworkConstants.TRANSPORT_TYPE_WWAN);
    if (nri != null) {
        DataSpecificRegistrationInfo dsri = nri.getDataSpecificInfo();
        if (dsri != null) {
            isUsingCa = dsri.isUsingCarrierAggregation();
        }
    }
    return isUsingCa || getCellBandwidths().length > 1;
}