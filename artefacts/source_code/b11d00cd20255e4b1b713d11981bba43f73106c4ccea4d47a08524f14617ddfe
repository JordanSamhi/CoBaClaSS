public boolean disconnect(BluetoothDevice device){
    log("disconnect()");
    final IBluetoothPbap service = mService;
    if (service == null) {
        Log.w(TAG, "Proxy not attached to service");
        return false;
    }
    try {
        service.disconnect(device);
        return true;
    } catch (RemoteException e) {
        Log.e(TAG, e.toString());
    }
    return false;
}