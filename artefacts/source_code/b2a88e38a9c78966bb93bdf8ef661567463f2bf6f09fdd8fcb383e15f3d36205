public static EnforcedAdmin checkIfMeteredDataRestricted(Context context, String packageName, int userId){
    final EnforcedAdmin enforcedAdmin = getProfileOrDeviceOwner(context, getUserHandleOf(userId));
    if (enforcedAdmin == null) {
        return null;
    }
    final DevicePolicyManager dpm = (DevicePolicyManager) context.getSystemService(Context.DEVICE_POLICY_SERVICE);
    return dpm.isMeteredDataDisabledPackageForUser(enforcedAdmin.component, packageName, userId) ? enforcedAdmin : null;
}