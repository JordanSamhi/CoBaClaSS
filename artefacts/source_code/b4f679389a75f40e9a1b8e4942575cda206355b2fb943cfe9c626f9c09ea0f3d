public boolean setPin(byte[] pin){
    final IBluetooth service = sService;
    if (service == null) {
        Log.e(TAG, "BT not enabled. Cannot set Remote Device pin");
        return false;
    }
    try {
        return service.setPin(this, true, pin.length, pin);
    } catch (RemoteException e) {
        Log.e(TAG, "", e);
    }
    return false;
}