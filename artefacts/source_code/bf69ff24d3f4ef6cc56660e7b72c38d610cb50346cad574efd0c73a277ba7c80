public boolean isBackupOperationInProgress(){
    synchronized (mCurrentOpLock) {
        for (int i = 0; i < mCurrentOperations.size(); i++) {
            Operation op = mCurrentOperations.valueAt(i);
            if (op.type == OP_TYPE_BACKUP && op.state == OP_PENDING) {
                return true;
            }
        }
    }
    return false;
}