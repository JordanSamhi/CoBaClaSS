public void setFastScrollEnabled(final boolean enabled){
    if (mFastScrollEnabled != enabled) {
        mFastScrollEnabled = enabled;
        if (isOwnerThread()) {
            setFastScrollerEnabledUiThread(enabled);
        } else {
            post(new Runnable() {

                @Override
                public void run() {
                    setFastScrollerEnabledUiThread(enabled);
                }
            });
        }
    }
}