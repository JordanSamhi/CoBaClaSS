public static Drawable getResizingBackgroundDrawable(@Nullable Drawable backgroundDrawable, @Nullable Drawable fallbackDrawable, boolean windowTranslucent){
    if (backgroundDrawable != null) {
        return enforceNonTranslucentBackground(backgroundDrawable, windowTranslucent);
    }
    if (fallbackDrawable != null) {
        return enforceNonTranslucentBackground(fallbackDrawable, windowTranslucent);
    }
    return new ColorDrawable(Color.BLACK);
}