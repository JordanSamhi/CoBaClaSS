public int getType(){
    final IBluetooth service = sService;
    if (service == null) {
        Log.e(TAG, "BT not enabled. Cannot get Remote Device type");
        return DEVICE_TYPE_UNKNOWN;
    }
    try {
        return service.getRemoteType(this);
    } catch (RemoteException e) {
        Log.e(TAG, "", e);
    }
    return DEVICE_TYPE_UNKNOWN;
}