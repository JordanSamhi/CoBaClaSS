public static AmbientFilter createBrightnessFilter(String tag, Resources resources){
    final int horizon = resources.getInteger(com.android.internal.R.integer.config_displayWhiteBalanceBrightnessFilterHorizon);
    final float intercept = getFloat(resources, com.android.internal.R.dimen.config_displayWhiteBalanceBrightnessFilterIntercept);
    return createAmbientFilter(tag, horizon, intercept);
}