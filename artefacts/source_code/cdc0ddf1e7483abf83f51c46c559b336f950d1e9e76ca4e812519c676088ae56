public final void cancel(boolean force){
    if (isRunning()) {
        canceling();
        if (mCancellation != null) {
            try {
                mCancellation.cancel();
            } catch (RemoteException re) {
                Log.w(LOG_TAG, "Error while canceling", re);
            }
        }
    }
    if (isCanceling()) {
        if (force) {
            if (DEBUG) {
                Log.i(LOG_TAG, "[FORCE CANCEL] queued");
            }
            mHandler.sendMessageDelayed(PooledLambda.obtainMessage(AsyncCommand::forceCancel, this).setWhat(MSG_FORCE_CANCEL), FORCE_CANCEL_TIMEOUT);
        }
        return;
    }
    canceled();
    mDoneCallback.onDone();
}