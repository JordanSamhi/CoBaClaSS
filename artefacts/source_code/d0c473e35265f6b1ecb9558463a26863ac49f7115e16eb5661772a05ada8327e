public void destroy(){
    mRenderer.destroy();
    mSurface.destroy();
    new SurfaceControl.Transaction().remove(mSurfaceControl).apply();
    mSurfaceSession.kill();
    mHandler.removeCallbacks(mMagnifierUpdater);
    if (mBitmap != null) {
        mBitmap.recycle();
    }
    mOverlay.setCallback(null);
}