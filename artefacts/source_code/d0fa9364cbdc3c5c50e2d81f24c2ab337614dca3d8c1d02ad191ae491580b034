public void extendToConference(String[] participants) throws ImsException{
    logi("extendToConference ::");
    if (isOnHold()) {
        if (DBG) {
            logi("extendToConference :: call is on hold");
        }
        throw new ImsException("Not in a call to extend a call to conference", ImsReasonInfo.CODE_LOCAL_ILLEGAL_STATE);
    }
    synchronized (mLockObj) {
        if (mUpdateRequest != UPDATE_NONE) {
            if (CONF_DBG) {
                logi("extendToConference :: update is in progress; request=" + updateRequestToString(mUpdateRequest));
            }
            throw new ImsException("Call update is in progress", ImsReasonInfo.CODE_LOCAL_ILLEGAL_STATE);
        }
        if (mSession == null) {
            loge("extendToConference :: ");
            throw new ImsException("No call session", ImsReasonInfo.CODE_LOCAL_CALL_TERMINATED);
        }
        mSession.extendToConference(participants);
        mUpdateRequest = UPDATE_EXTEND_TO_CONFERENCE;
    }
}