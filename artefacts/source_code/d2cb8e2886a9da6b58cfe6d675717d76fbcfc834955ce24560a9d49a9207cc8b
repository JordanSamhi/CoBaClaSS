public static long getWALTruncateSize(){
    final long setting = SQLiteCompatibilityWalFlags.getTruncateSize();
    if (setting >= 0) {
        return setting;
    }
    return SystemProperties.getInt("debug.sqlite.wal.truncatesize", Resources.getSystem().getInteger(com.android.internal.R.integer.db_wal_truncate_size));
}