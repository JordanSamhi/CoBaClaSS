public int getActiveModemCount(){
    int modemCount = 1;
    switch(getMultiSimConfiguration()) {
        case UNKNOWN:
            modemCount = 1;
            if (!isVoiceCapable() && !isSmsCapable() && !isDataCapable()) {
                modemCount = 0;
            }
            break;
        case DSDS:
        case DSDA:
            modemCount = 2;
            break;
        case TSTS:
            modemCount = 3;
            break;
    }
    return modemCount;
}