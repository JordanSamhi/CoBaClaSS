public void stop(){
    if (mState == MUXER_STATE_STARTED) {
        try {
            nativeStop(mNativeObject);
        } catch (Exception e) {
            throw e;
        } finally {
            mState = MUXER_STATE_STOPPED;
        }
    } else {
        throw new IllegalStateException("Can't stop due to wrong state(" + convertMuxerStateCodeToString(mState) + ")");
    }
}