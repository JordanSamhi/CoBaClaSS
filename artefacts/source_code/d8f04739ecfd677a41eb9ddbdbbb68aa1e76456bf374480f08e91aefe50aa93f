public static ActivityOptions createAspectScaleAnimation(Context context, Handler handler, boolean scaleUp, AppTransitionAnimationSpecsFuture animationSpecsFuture, final Runnable animationStartCallback){
    final OnAnimationStartedListener animStartedListener = new OnAnimationStartedListener() {

        private boolean mHandled;

        @Override
        public void onAnimationStarted() {
            if (mHandled) {
                return;
            }
            mHandled = true;
            if (animationStartCallback != null) {
                animationStartCallback.run();
            }
        }
    };
    final ActivityOptions opts = ActivityOptions.makeMultiThumbFutureAspectScaleAnimation(context, handler, animationSpecsFuture != null ? animationSpecsFuture.getFuture() : null, animStartedListener, scaleUp);
    return opts;
}