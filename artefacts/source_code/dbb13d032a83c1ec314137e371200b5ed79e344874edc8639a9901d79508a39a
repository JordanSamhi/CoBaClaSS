public void registerTetheringEventCallback(@NonNull @CallbackExecutor Executor executor, @NonNull final OnTetheringEventCallback callback){
    Preconditions.checkNotNull(callback, "OnTetheringEventCallback cannot be null.");
    final TetheringEventCallback tetherCallback = new TetheringEventCallback() {

        @Override
        public void onUpstreamChanged(@Nullable Network network) {
            callback.onUpstreamChanged(network);
        }
    };
    synchronized (mTetheringEventCallbacks) {
        mTetheringEventCallbacks.put(callback, tetherCallback);
        mTetheringManager.registerTetheringEventCallback(executor, tetherCallback);
    }
}