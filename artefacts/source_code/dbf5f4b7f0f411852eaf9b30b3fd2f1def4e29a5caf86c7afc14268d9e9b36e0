public DvrPlayback openDvrPlayback(@BytesLong long bufferSize, @CallbackExecutor @NonNull Executor executor, @NonNull OnPlaybackStatusChangedListener l){
    Objects.requireNonNull(executor, "executor must not be null");
    Objects.requireNonNull(l, "OnPlaybackStatusChangedListener must not be null");
    if (!checkResource(TunerResourceManager.TUNER_RESOURCE_TYPE_DEMUX)) {
        return null;
    }
    DvrPlayback dvr = nativeOpenDvrPlayback(bufferSize);
    dvr.setListener(executor, l);
    return dvr;
}