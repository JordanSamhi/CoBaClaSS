public Builder setBufferSize(@IntRange(from = 0) int width, @IntRange(from = 0) int height){
    if (width < 0 || height < 0) {
        throw new IllegalArgumentException("width and height must be positive");
    }
    mWidth = width;
    mHeight = height;
    return setFlags(FX_SURFACE_NORMAL, FX_SURFACE_MASK);
}