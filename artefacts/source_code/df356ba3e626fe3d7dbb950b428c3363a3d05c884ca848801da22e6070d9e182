public void onStop(){
    synchronized (this) {
        if (DEBUG)
            Log.d(TAG, "onStop");
        clearActiveCues();
        mLastTimeMs = -1;
    }
    updateView(mActiveCues);
    mNextScheduledTimeMs = -1;
    if (mTimeProvider != null) {
        mTimeProvider.notifyAt(MediaTimeProvider.NO_TIME, this);
    }
}