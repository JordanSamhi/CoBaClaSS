public boolean setNightDisplayAutoMode(@AutoMode int autoMode){
    if (autoMode != AUTO_MODE_DISABLED && autoMode != AUTO_MODE_CUSTOM_TIME && autoMode != AUTO_MODE_TWILIGHT) {
        throw new IllegalArgumentException("Invalid autoMode: " + autoMode);
    }
    if (mManager.getNightDisplayAutoMode() != autoMode) {
        getMetricsLogger().write(new LogMaker(MetricsEvent.ACTION_NIGHT_DISPLAY_AUTO_MODE_CHANGED).setType(MetricsEvent.TYPE_ACTION).setSubtype(autoMode));
    }
    return mManager.setNightDisplayAutoMode(autoMode);
}