public float getInputHeadsetProbability(){
    if (hasMIDIInterface()) {
        return 0.0f;
    }
    float probability = 0.0f;
    boolean hasMic = hasMic();
    boolean hasSpeaker = hasSpeaker();
    if (hasMic && hasSpeaker) {
        probability += 0.75f;
    }
    if (hasMic && hasHIDInterface()) {
        probability += 0.25f;
    }
    return probability;
}