public byte[] getDriverStateDump(){
    class AnswerBox {

        public byte[] value;
    }
    AnswerBox ans = new AnswerBox();
    synchronized (sLock) {
        if (mIWifiChip == null)
            return (null);
        try {
            mIWifiChip.requestDriverDebugDump((status, blob) -> {
                if (!ok(status))
                    return;
                ans.value = NativeUtil.byteArrayFromArrayList(blob);
            });
        } catch (RemoteException e) {
            handleRemoteException(e);
            return null;
        }
    }
    return ans.value;
}