public CharSequence loadSummary(PackageManager packageManager){
    if (mSummaryResId == 0) {
        return mNonLocalizedSummary;
    }
    ServiceInfo serviceInfo = mResolveInfo.serviceInfo;
    CharSequence summary = packageManager.getText(serviceInfo.packageName, mSummaryResId, serviceInfo.applicationInfo);
    if (summary != null) {
        return summary.toString().trim();
    }
    return null;
}