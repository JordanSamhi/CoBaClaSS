public ContentProviderResult apply(@NonNull ContentProvider provider, @NonNull ContentProviderResult[] backRefs, int numBackRefs) throws OperationApplicationException{
    if (mExceptionAllowed) {
        try {
            return applyInternal(provider, backRefs, numBackRefs);
        } catch (Exception e) {
            return new ContentProviderResult(e);
        }
    } else {
        return applyInternal(provider, backRefs, numBackRefs);
    }
}