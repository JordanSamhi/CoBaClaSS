public static void choosePrivateKeyAlias(@NonNull Activity activity, @NonNull KeyChainAliasCallback response, @Nullable @KeyProperties.KeyAlgorithmEnum String[] keyTypes, @Nullable Principal[] issuers, @Nullable String host, int port, @Nullable String alias){
    Uri uri = null;
    if (host != null) {
        uri = new Uri.Builder().authority(host + (port != -1 ? ":" + port : "")).build();
    }
    choosePrivateKeyAlias(activity, response, keyTypes, issuers, uri, alias);
}