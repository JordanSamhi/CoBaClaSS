public void sendGamepadAxisValue(@NonNull IBinder token, int axis, @FloatRange(from = -1.0f, to = 1.0f) float value) throws RuntimeException{
    Objects.requireNonNull(token);
    if (DEBUG_KEYS) {
        Log.d(TAG, "sendGamepadAxisValue() token: " + token);
    }
    try {
        mRemoteServiceInput.sendGamepadAxisValue(token, axis, value);
    } catch (RemoteException re) {
        throw re.rethrowFromSystemServer();
    }
}