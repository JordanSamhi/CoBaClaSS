public void requestLocationUpdates(@NonNull String provider, long minTimeMs, float minDistanceM, @NonNull LocationListener listener){
    Preconditions.checkArgument(provider != null, "invalid null provider");
    Preconditions.checkArgument(listener != null, "invalid null listener");
    LocationRequest request = LocationRequest.createFromDeprecatedProvider(provider, minTimeMs, minDistanceM, false);
    requestLocationUpdates(request, listener, null);
}