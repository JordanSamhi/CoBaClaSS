public void stopBluetoothSco(IBinder cb){
    if (!checkAudioSettingsPermission("stopBluetoothSco()") || !mSystemReady) {
        return;
    }
    final int uid = Binder.getCallingUid();
    final int pid = Binder.getCallingPid();
    final String eventSource = new StringBuilder("stopBluetoothSco()").append(") from u/pid:").append(uid).append("/").append(pid).toString();
    synchronized (mDeviceBroker.mSetModeLock) {
        mDeviceBroker.stopBluetoothScoForClient_Sync(cb, eventSource);
    }
    new MediaMetrics.Item(MediaMetrics.Name.AUDIO_BLUETOOTH).setUid(uid).setPid(pid).set(MediaMetrics.Property.EVENT, "stopBluetoothSco").set(MediaMetrics.Property.SCO_AUDIO_MODE, BtHelper.scoAudioModeToString(BtHelper.SCO_MODE_UNDEFINED)).record();
}