public void addSuggestionConnectionStatusListener(@NonNull @CallbackExecutor Executor executor, @NonNull SuggestionConnectionStatusListener listener){
    if (listener == null)
        throw new IllegalArgumentException("Listener cannot be null");
    if (executor == null)
        throw new IllegalArgumentException("Executor cannot be null");
    Log.v(TAG, "addSuggestionConnectionStatusListener listener=" + listener + ", executor=" + executor);
    try {
        mService.registerSuggestionConnectionStatusListener(new Binder(), new SuggestionConnectionStatusListenerProxy(executor, listener), listener.hashCode(), mContext.getOpPackageName(), mContext.getAttributionTag());
    } catch (RemoteException e) {
        throw e.rethrowFromSystemServer();
    }
}