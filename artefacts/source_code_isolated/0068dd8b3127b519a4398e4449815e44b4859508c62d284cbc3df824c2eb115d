public int breakText(String text, boolean measureForwards, float maxWidth, float[] measuredWidth){
    if (text == null) {
        throw new IllegalArgumentException("text cannot be null");
    }
    if (text.length() == 0) {
        return 0;
    }
    if (!mHasCompatScaling) {
        return nBreakText(mNativePaint, text, measureForwards, maxWidth, mBidiFlags, measuredWidth);
    }
    final float oldSize = getTextSize();
    setTextSize(oldSize * mCompatScaling);
    final int res = nBreakText(mNativePaint, text, measureForwards, maxWidth * mCompatScaling, mBidiFlags, measuredWidth);
    setTextSize(oldSize);
    if (measuredWidth != null)
        measuredWidth[0] *= mInvCompatScaling;
    return res;
}