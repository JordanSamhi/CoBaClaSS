public final void setRange(int minValue, int maxValue){
    if (mMinValue != minValue) {
        mMinValue = minValue;
    }
    if (mMaxValue != maxValue) {
        mMaxValue = maxValue;
        mMaxCount = 1 + (int) (Math.log(maxValue) / LOG_RADIX);
        updateMinimumWidth();
        updateDisplayedValue();
    }
}