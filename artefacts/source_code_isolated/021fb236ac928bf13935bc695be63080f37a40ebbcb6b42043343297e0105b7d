public View findContainingItemView(View view){
    if (mRecyclerView == null) {
        return null;
    }
    View found = mRecyclerView.findContainingItemView(view);
    if (found == null) {
        return null;
    }
    if (mChildHelper.isHidden(found)) {
        return null;
    }
    return found;
}