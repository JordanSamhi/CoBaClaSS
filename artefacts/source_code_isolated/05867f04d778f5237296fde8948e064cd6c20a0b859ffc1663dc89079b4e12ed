public void setInput(byte[] b, int off, int len){
    if (b == null) {
        throw new NullPointerException();
    }
    if (off < 0 || len < 0 || off > b.length - len) {
        throw new ArrayIndexOutOfBoundsException();
    }
    synchronized (zsRef) {
        this.buf = b;
        this.off = off;
        this.len = len;
    }
}