public boolean groupAdd(String networkName, String passphrase, boolean isPersistent, int freq, String peerAddress, boolean join){
    synchronized (mLock) {
        android.hardware.wifi.supplicant.V1_2.ISupplicantP2pIface ifaceV12 = getSupplicantP2pIfaceAndLogFailureV1_2("groupAdd_1_2");
        if (ifaceV12 == null)
            return false;
        java.util.ArrayList<Byte> ssid = NativeUtil.decodeSsid("\"" + networkName + "\"");
        byte[] macAddress = null;
        try {
            macAddress = NativeUtil.macAddressToByteArray(peerAddress);
        } catch (Exception e) {
            Log.e(TAG, "Could not parse mac address.", e);
            return false;
        }
        SupplicantResult<Void> result = new SupplicantResult("groupAdd(" + networkName + ", " + (TextUtils.isEmpty(passphrase) ? "<Empty>" : "<Non-Empty>") + ", " + isPersistent + ", " + freq + ", " + peerAddress + ", " + join + ")");
        try {
            result.setResult(ifaceV12.addGroup_1_2(ssid, passphrase, isPersistent, freq, macAddress, join));
        } catch (RemoteException e) {
            Log.e(TAG, "ISupplicantP2pIface exception: " + e);
            supplicantServiceDiedHandler();
        }
        return result.isSuccess();
    }
}