public static int getApnTypesBitmaskFromString(String types){
    if (TextUtils.isEmpty(types)) {
        return TYPE_ALL;
    } else {
        int result = 0;
        for (String str : types.split(",")) {
            Integer type = APN_TYPE_STRING_MAP.get(str.toLowerCase());
            if (type != null) {
                result |= type;
            }
        }
        return result;
    }
}