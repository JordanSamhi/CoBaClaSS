public static String getStateString(int state){
    switch(state) {
        case STATE_UNAVAILABLE:
            return "UNAVAILABLE";
        case STATE_AVAILABLE:
            return "AVAILABLE";
        case STATE_TETHERED:
            return "TETHERED";
        case STATE_LOCAL_ONLY:
            return "LOCAL_ONLY";
    }
    return "UNKNOWN: " + state;
}