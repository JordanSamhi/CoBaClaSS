public Channel openBasicChannel(@Nullable byte[] aid, @Nullable byte p2) throws IOException{
    if (!mService.isConnected()) {
        throw new IllegalStateException("service not connected to system");
    }
    synchronized (mLock) {
        try {
            ISecureElementChannel channel = mSession.openBasicChannel(aid, p2, mReader.getSEService().getListener());
            if (channel == null) {
                return null;
            }
            return new Channel(mService, this, channel);
        } catch (ServiceSpecificException e) {
            if (e.errorCode == SEService.IO_ERROR) {
                throw new IOException(e.getMessage());
            } else if (e.errorCode == SEService.NO_SUCH_ELEMENT_ERROR) {
                throw new NoSuchElementException(e.getMessage());
            } else {
                throw new IllegalStateException(e.getMessage());
            }
        } catch (RemoteException e) {
            throw new IllegalStateException(e.getMessage());
        }
    }
}