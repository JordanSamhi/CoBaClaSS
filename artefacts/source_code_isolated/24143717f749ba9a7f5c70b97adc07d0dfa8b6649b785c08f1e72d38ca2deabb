public void startActivityAsUser(Intent intent, Bundle options, UserHandle user){
    if (mParent != null) {
        throw new RuntimeException("Can't be called from a child");
    }
    options = transferSpringboardActivityOptions(options);
    Instrumentation.ActivityResult ar = mInstrumentation.execStartActivity(this, mMainThread.getApplicationThread(), mToken, mEmbeddedID, intent, -1, options, user);
    if (ar != null) {
        mMainThread.sendActivityResult(mToken, mEmbeddedID, -1, ar.getResultCode(), ar.getResultData());
    }
    cancelInputsAndStartExitTransition(options);
}