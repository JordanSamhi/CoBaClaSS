public void saveLockPassword(byte[] password){
    if (mCurrentSaveLockTask != null && mCurrentSaveLockTask.getStatus() != AsyncTask.Status.FINISHED) {
        Log.e(TAG, "Can't save multiple passwords at once");
        return;
    }
    mCurrentSaveLockTask = new SaveLockAsyncTask(mInitialLockListener, mInitialLockSetupService, LockTypes.PASSWORD);
    mCurrentSaveLockTask.executeOnExecutor(AsyncTask.THREAD_POOL_EXECUTOR, password);
}