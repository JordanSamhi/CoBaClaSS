public void addOnWifiUsabilityStatsListener(IBinder binder, IOnWifiUsabilityStatsListener listener, int listenerIdentifier){
    if (binder == null) {
        throw new IllegalArgumentException("Binder must not be null");
    }
    if (listener == null) {
        throw new IllegalArgumentException("Listener must not be null");
    }
    mContext.enforceCallingOrSelfPermission(android.Manifest.permission.WIFI_UPDATE_USABILITY_STATS_SCORE, "WifiService");
    if (mVerboseLoggingEnabled) {
        mLog.info("addOnWifiUsabilityStatsListener uid=%").c(Binder.getCallingUid()).flush();
    }
    mWifiThreadRunner.post(() -> mWifiMetrics.addOnWifiUsabilityListener(binder, listener, listenerIdentifier));
}