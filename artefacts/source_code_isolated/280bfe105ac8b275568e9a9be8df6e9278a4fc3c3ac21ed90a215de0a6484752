public ArrayList<HardwareConfig> getAllModems(){
    synchronized (mLock) {
        ArrayList<HardwareConfig> modems = new ArrayList<HardwareConfig>();
        if (mModems.isEmpty()) {
            if (DBG)
                logd("getAllModems: empty list.");
        } else {
            for (HardwareConfig modem : mModems) {
                modems.add(modem);
            }
        }
        return modems;
    }
}