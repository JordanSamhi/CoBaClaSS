public static PackageParser2 forParsingFileWithDefaults(){
    IPlatformCompat platformCompat = IPlatformCompat.Stub.asInterface(ServiceManager.getService(Context.PLATFORM_COMPAT_SERVICE));
    return new PackageParser2(null, false, null, null, new Callback() {

        @Override
        public boolean isChangeEnabled(long changeId, @NonNull ApplicationInfo appInfo) {
            try {
                return platformCompat.isChangeEnabled(changeId, appInfo);
            } catch (Exception e) {
                Slog.wtf(ParsingUtils.TAG, "IPlatformCompat query failed", e);
                return true;
            }
        }

        @Override
        public boolean hasFeature(String feature) {
            return false;
        }
    });
}