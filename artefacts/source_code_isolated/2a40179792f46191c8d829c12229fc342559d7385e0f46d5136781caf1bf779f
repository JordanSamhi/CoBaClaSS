public boolean addWhitelistedRestrictedPermission(@NonNull String packageName, @NonNull String permName, @PermissionWhitelistFlags int flags){
    try {
        final int userId = getUserId();
        return mPermissionManager.addWhitelistedRestrictedPermission(packageName, permName, flags, userId);
    } catch (RemoteException e) {
        throw e.rethrowFromSystemServer();
    }
}