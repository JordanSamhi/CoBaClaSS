public boolean isToggleableTile(){
    try {
        ServiceInfo info = mPackageManagerAdapter.getServiceInfo(mIntent.getComponent(), PackageManager.MATCH_UNINSTALLED_PACKAGES | PackageManager.GET_META_DATA);
        return info.metaData != null && info.metaData.getBoolean(TileService.META_DATA_TOGGLEABLE_TILE, false);
    } catch (PackageManager.NameNotFoundException e) {
        return false;
    }
}