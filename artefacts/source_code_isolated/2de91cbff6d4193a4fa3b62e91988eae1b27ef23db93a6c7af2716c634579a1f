public void registerStorageVolumeCallback(@CallbackExecutor @NonNull Executor executor, @NonNull StorageVolumeCallback callback){
    synchronized (mDelegates) {
        final StorageEventListenerDelegate delegate = new StorageEventListenerDelegate(executor, new StorageEventListener(), callback);
        try {
            mStorageManager.registerListener(delegate);
        } catch (RemoteException e) {
            throw e.rethrowFromSystemServer();
        }
        mDelegates.add(delegate);
    }
}