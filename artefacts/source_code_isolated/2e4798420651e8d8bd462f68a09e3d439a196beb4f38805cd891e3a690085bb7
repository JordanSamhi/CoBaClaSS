public void setInnerRadiusRatio(@FloatRange(from = 0.0f, fromInclusive = false) float innerRadiusRatio){
    if (innerRadiusRatio <= 0) {
        throw new IllegalArgumentException("Ratio must be greater than zero");
    }
    mGradientState.mInnerRadiusRatio = innerRadiusRatio;
    mPathIsDirty = true;
    invalidateSelf();
}