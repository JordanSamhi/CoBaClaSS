public boolean checkPermissionReadImages(boolean enforce, int pid, int uid, String packageName, @Nullable String featureId){
    if (!checkExternalStoragePermissionAndAppOp(enforce, pid, uid, packageName, featureId, READ_EXTERNAL_STORAGE, OP_READ_EXTERNAL_STORAGE)) {
        return false;
    }
    return noteAppOpAllowingLegacy(enforce, pid, uid, packageName, featureId, OP_READ_MEDIA_IMAGES);
}