public Region getTransparentRegion(){
    if (mTransparentRegion.isEmpty()) {
        mMask.toggleInverseFillType();
        mTransparentRegion.set(getBounds());
        mTransparentRegion.setPath(mMask, mTransparentRegion);
        mMask.toggleInverseFillType();
    }
    return mTransparentRegion;
}