public void addConnection(T c){
    synchronized (mService.mGlobalLock) {
        if (mIsDisconnecting) {
            if (DEBUG_CLEANUP) {
                Slog.e(TAG_ATM, "Skip adding connection " + c + " to a disconnecting holder of " + mActivity);
            }
            return;
        }
        if (mConnections == null) {
            mConnections = new ArraySet<>();
        }
        mConnections.add(c);
    }
}