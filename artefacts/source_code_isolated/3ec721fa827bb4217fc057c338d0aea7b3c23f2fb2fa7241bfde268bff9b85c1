public void registerListener(){
    mPhone.listen(mPhoneStateListener, PhoneStateListener.LISTEN_SERVICE_STATE | PhoneStateListener.LISTEN_SIGNAL_STRENGTHS | PhoneStateListener.LISTEN_CALL_STATE | PhoneStateListener.LISTEN_DATA_CONNECTION_STATE | PhoneStateListener.LISTEN_DATA_ACTIVITY | PhoneStateListener.LISTEN_CARRIER_NETWORK_CHANGE | PhoneStateListener.LISTEN_ACTIVE_DATA_SUBSCRIPTION_ID_CHANGE | PhoneStateListener.LISTEN_DISPLAY_INFO_CHANGED);
    mContext.getContentResolver().registerContentObserver(Global.getUriFor(Global.MOBILE_DATA), true, mObserver);
    mContext.getContentResolver().registerContentObserver(Global.getUriFor(Global.MOBILE_DATA + mSubscriptionInfo.getSubscriptionId()), true, mObserver);
}