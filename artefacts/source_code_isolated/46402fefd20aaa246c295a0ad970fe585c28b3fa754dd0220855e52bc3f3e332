public boolean isTetheringOn(){
    if (VDBG)
        log("isTetheringOn()");
    final IBluetoothPan service = getService();
    if (service != null && isEnabled()) {
        try {
            return service.isTetheringOn();
        } catch (RemoteException e) {
            Log.e(TAG, "Stack:" + Log.getStackTraceString(new Throwable()));
        }
    }
    return false;
}