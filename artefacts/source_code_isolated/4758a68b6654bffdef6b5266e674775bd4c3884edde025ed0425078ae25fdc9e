public void setScale(float scale){
    float h = getIntrinsicHeight();
    float w = getIntrinsicWidth();
    mScaleX = scale * LEGACY_ICON_SCALE;
    mScaleY = scale * LEGACY_ICON_SCALE;
    if (h > w && w > 0) {
        mScaleX *= w / h;
    } else if (w > h && h > 0) {
        mScaleY *= h / w;
    }
}