public void setAlpha(int alpha){
    if (!mHasAlpha || mAlpha != alpha) {
        mHasAlpha = true;
        mAlpha = alpha;
        if (mCurrDrawable != null) {
            if (mEnterAnimationEnd == 0) {
                mCurrDrawable.setAlpha(alpha);
            } else {
                animate(false);
            }
        }
    }
}