public void sendDataSms(@NonNull byte[] data, int subId, @NonNull String destAddress, int destPort, int sendSmsFlag, @NonNull final CarrierMessagingCallbackWrapper callback){
    if (mICarrierMessagingService != null) {
        try {
            mICarrierMessagingService.sendDataSms(data, subId, destAddress, destPort, sendSmsFlag, new CarrierMessagingCallbackWrapperInternal(callback));
        } catch (RemoteException e) {
            throw new RuntimeException(e);
        }
    }
}