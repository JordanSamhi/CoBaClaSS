public void enableUsage(){
    if (mSettableParameters.get(PARAM_ON_IDLE_DISABLE_AWARE) != 0 && mPowerManager.isDeviceIdleMode()) {
        if (mDbg)
            Log.d(TAG, "enableUsage(): while device is in IDLE mode - ignoring");
        return;
    }
    if (!mWifiPermissionsUtil.isLocationModeEnabled()) {
        if (mDbg)
            Log.d(TAG, "enableUsage(): while location is disabled - ignoring");
        return;
    }
    if (mWifiManager.getWifiState() != WifiManager.WIFI_STATE_ENABLED) {
        if (mDbg)
            Log.d(TAG, "enableUsage(): while Wi-Fi is disabled - ignoring");
        return;
    }
    if (!mWifiAwareNativeManager.isAwareNativeAvailable()) {
        if (mDbg)
            Log.d(TAG, "enableUsage(): while Aware Native isn't Available - ignoring");
        return;
    }
    Message msg = mSm.obtainMessage(MESSAGE_TYPE_COMMAND);
    msg.arg1 = COMMAND_TYPE_ENABLE_USAGE;
    mSm.sendMessage(msg);
}