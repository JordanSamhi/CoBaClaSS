public void onRadioStateUnavailable(){
    nullifyUiccCard(true);
    if (mPhoneId != INVALID_PHONE_ID) {
        UiccController.updateInternalIccState(mContext, IccCardConstants.State.UNKNOWN, null, mPhoneId);
    }
    mCardState = null;
    mLastRadioState = TelephonyManager.RADIO_POWER_UNAVAILABLE;
}