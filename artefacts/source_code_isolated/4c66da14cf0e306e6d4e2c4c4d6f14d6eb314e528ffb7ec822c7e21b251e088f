public void showAllKeyguardButtons(boolean isSetUp){
    checkAllBars(isSetUp);
    if (mTopView != null) {
        mTopView.showKeyguardButtons();
    }
    if (mBottomView != null) {
        mBottomView.showKeyguardButtons();
    }
    if (mLeftView != null) {
        mLeftView.showKeyguardButtons();
    }
    if (mRightView != null) {
        mRightView.showKeyguardButtons();
    }
}