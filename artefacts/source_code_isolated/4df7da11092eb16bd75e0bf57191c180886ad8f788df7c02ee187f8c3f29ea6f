public void sendTextSms(@NonNull String text, int subId, @NonNull String destAddress, int sendSmsFlag, @NonNull final CarrierMessagingCallbackWrapper callback){
    if (mICarrierMessagingService != null) {
        try {
            mICarrierMessagingService.sendTextSms(text, subId, destAddress, sendSmsFlag, new CarrierMessagingCallbackWrapperInternal(callback));
        } catch (RemoteException e) {
            throw new RuntimeException(e);
        }
    }
}