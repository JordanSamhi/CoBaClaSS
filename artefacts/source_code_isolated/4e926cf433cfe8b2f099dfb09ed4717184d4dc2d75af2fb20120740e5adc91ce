public static void enforceCallingOrSelfModifyPermissionOrCarrierPrivilege(Context context, int subId, String message){
    if (context.checkCallingOrSelfPermission(android.Manifest.permission.MODIFY_PHONE_STATE) == PERMISSION_GRANTED) {
        return;
    }
    if (DBG)
        Log.d(LOG_TAG, "No modify permission, check carrier privilege next.");
    enforceCallingOrSelfCarrierPrivilege(context, subId, message);
}