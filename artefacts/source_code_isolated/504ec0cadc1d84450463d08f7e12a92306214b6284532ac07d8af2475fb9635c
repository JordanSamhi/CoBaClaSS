public static Bundle includeSqlSelectionArgs(@NonNull Bundle queryArgs, @Nullable String selection, @Nullable String[] selectionArgs){
    if (selection != null) {
        queryArgs.putString(QUERY_ARG_SQL_SELECTION, selection);
    }
    if (selectionArgs != null) {
        queryArgs.putStringArray(QUERY_ARG_SQL_SELECTION_ARGS, selectionArgs);
    }
    return queryArgs;
}