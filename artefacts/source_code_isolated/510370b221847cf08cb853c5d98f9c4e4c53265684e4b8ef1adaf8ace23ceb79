public void showAppOpsIcons(ArraySet<Integer> appOps){
    if (appOps == null) {
        return;
    }
    if (mOverlayIcon != null) {
        mOverlayIcon.setVisibility(appOps.contains(AppOpsManager.OP_SYSTEM_ALERT_WINDOW) ? View.VISIBLE : View.GONE);
    }
    if (mCameraIcon != null) {
        mCameraIcon.setVisibility(appOps.contains(AppOpsManager.OP_CAMERA) ? View.VISIBLE : View.GONE);
    }
    if (mMicIcon != null) {
        mMicIcon.setVisibility(appOps.contains(AppOpsManager.OP_RECORD_AUDIO) ? View.VISIBLE : View.GONE);
    }
}