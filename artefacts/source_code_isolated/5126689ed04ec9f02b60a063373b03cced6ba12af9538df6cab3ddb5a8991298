public void updateSystemUiContext(){
    PackageManagerInternal packageManagerInternal;
    synchronized (this) {
        packageManagerInternal = getPackageManagerInternalLocked();
    }
    ApplicationInfo ai = packageManagerInternal.getApplicationInfo("android", GET_SHARED_LIBRARY_FILES, Binder.getCallingUid(), UserHandle.USER_SYSTEM);
    ActivityThread.currentActivityThread().handleSystemApplicationInfoChanged(ai);
}