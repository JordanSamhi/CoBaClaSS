public void sendMms(@NonNull Uri pduUri, int subId, @NonNull Uri location, @NonNull final CarrierMessagingCallbackWrapper callback){
    if (mICarrierMessagingService != null) {
        try {
            mICarrierMessagingService.sendMms(pduUri, subId, location, new CarrierMessagingCallbackWrapperInternal(callback));
        } catch (RemoteException e) {
            throw new RuntimeException(e);
        }
    }
}