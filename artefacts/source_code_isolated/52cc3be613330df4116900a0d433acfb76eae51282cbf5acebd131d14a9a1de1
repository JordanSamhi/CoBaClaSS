public static boolean equals(float[] a, float[] a2){
    if (a == a2)
        return true;
    if (a == null || a2 == null)
        return false;
    int length = a.length;
    if (a2.length != length)
        return false;
    for (int i = 0; i < length; i++) if (Float.floatToIntBits(a[i]) != Float.floatToIntBits(a2[i]))
        return false;
    return true;
}