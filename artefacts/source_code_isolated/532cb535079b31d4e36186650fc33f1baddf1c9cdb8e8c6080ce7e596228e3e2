public boolean getSpeakerAngles(int inputChannelMask, @VirtualizationMode int virtualizationMode, int[] angles) throws IllegalStateException, IllegalArgumentException, UnsupportedOperationException{
    if (angles == null) {
        throw (new IllegalArgumentException("Virtualizer: illegal null channel / angle array"));
    }
    return getAnglesInt(inputChannelMask, getDeviceForModeQuery(virtualizationMode), angles);
}