public void downloadMultimediaMessage(Context context, String locationUrl, Uri contentUri, Bundle configOverrides, PendingIntent downloadedIntent){
    if (TextUtils.isEmpty(locationUrl)) {
        throw new IllegalArgumentException("Empty MMS location URL");
    }
    if (contentUri == null) {
        throw new IllegalArgumentException("Uri contentUri null");
    }
    MmsManager m = (MmsManager) context.getSystemService(Context.MMS_SERVICE);
    if (m != null) {
        m.downloadMultimediaMessage(getSubscriptionId(), locationUrl, contentUri, configOverrides, downloadedIntent, 0L);
    }
}