public ShortcutInfo getShortcut(@NonNull String packageName, @UserIdInt int userId, @NonNull String shortcutId){
    List<ShortcutInfo> shortcuts = getShortcuts(packageName, userId, Collections.singletonList(shortcutId));
    if (shortcuts != null && !shortcuts.isEmpty()) {
        return shortcuts.get(0);
    }
    return null;
}