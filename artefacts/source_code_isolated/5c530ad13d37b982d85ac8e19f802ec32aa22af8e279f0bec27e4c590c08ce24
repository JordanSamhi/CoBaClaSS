public void initializeTransports(String[] transportNames, IBackupObserver observer){
    mContext.enforceCallingOrSelfPermission(android.Manifest.permission.BACKUP, "initializeTransport");
    Slog.v(TAG, addUserIdToLogMessage(mUserId, "initializeTransport(): " + Arrays.asList(transportNames)));
    final long oldId = Binder.clearCallingIdentity();
    try {
        mWakelock.acquire();
        OnTaskFinishedListener listener = caller -> mWakelock.release();
        mBackupHandler.post(new PerformInitializeTask(this, transportNames, observer, listener));
    } finally {
        Binder.restoreCallingIdentity(oldId);
    }
}