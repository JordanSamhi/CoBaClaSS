public ArrayList<HardwareConfig> getAllSims(){
    synchronized (mLock) {
        ArrayList<HardwareConfig> sims = new ArrayList<HardwareConfig>();
        if (mSims.isEmpty()) {
            if (DBG)
                logd("getAllSims: empty list.");
        } else {
            for (HardwareConfig sim : mSims) {
                sims.add(sim);
            }
        }
        return sims;
    }
}