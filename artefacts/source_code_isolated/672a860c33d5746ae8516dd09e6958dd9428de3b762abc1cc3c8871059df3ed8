public void onPackagesReady(){
    synchronized (mLock) {
        mIsPackagesReady = true;
        mHealthCheckController.setCallbacks(packageName -> onHealthCheckPassed(packageName), packages -> onSupportedPackages(packages), () -> {
            syncRequestsAsync();
            mSyncRequired = true;
        });
        setPropertyChangedListenerLocked();
        updateConfigs();
        registerConnectivityModuleHealthListener();
    }
}