public void animateStackDismissal(float translationYBy, Runnable after){
    animationsForChildrenFromIndex(0, (index, animation) -> animation.scaleX(0f).scaleY(0f).alpha(0f).translationY(mLayout.getChildAt(index).getTranslationY() + translationYBy).withStiffness(SpringForce.STIFFNESS_HIGH)).startAll(after);
}