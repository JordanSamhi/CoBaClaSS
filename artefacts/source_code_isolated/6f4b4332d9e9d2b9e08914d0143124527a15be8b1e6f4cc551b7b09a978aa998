public void startShortcutActivity(@NonNull ShortcutInfo shortcut, @NonNull ActivityOptions options, @Nullable Rect sourceBounds){
    LauncherApps service = (LauncherApps) mContext.getSystemService(Context.LAUNCHER_APPS_SERVICE);
    prepareActivityOptions(options);
    service.startShortcut(shortcut, sourceBounds, options.toBundle());
}