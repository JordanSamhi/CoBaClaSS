public void broadcastStickyIntent(Context context, Intent intent, int phoneId){
    logd("Broadcasting and adding intent for rebroadcast: " + intent.getAction() + " " + intent.getStringExtra(IccCardConstants.INTENT_KEY_ICC_STATE) + " for phoneId " + phoneId);
    synchronized (mRebroadcastIntents) {
        context.sendStickyBroadcastAsUser(intent, UserHandle.ALL);
        mRebroadcastIntents.put(phoneId, intent);
    }
}