public boolean shouldSendVolumeKeys(BluetoothDevice device){
    if (isEnabled() && isValidDevice(device)) {
        ParcelUuid[] uuids = device.getUuids();
        if (uuids == null)
            return false;
        for (ParcelUuid uuid : uuids) {
            if (uuid.equals(BluetoothUuid.AVRCP_TARGET)) {
                return true;
            }
        }
    }
    return false;
}