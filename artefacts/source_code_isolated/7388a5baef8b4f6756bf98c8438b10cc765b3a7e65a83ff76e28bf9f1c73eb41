public static float[] calculateLight(float radius, float x, float y, float height){
    float[] ret = new float[4 * 3];
    ret[0] = x;
    ret[1] = y + radius;
    ret[2] = height;
    ret[3] = x - radius;
    ret[4] = y;
    ret[5] = height;
    ret[6] = x;
    ret[7] = y - radius;
    ret[8] = height;
    ret[9] = x + radius;
    ret[10] = y;
    ret[11] = height;
    return ret;
}