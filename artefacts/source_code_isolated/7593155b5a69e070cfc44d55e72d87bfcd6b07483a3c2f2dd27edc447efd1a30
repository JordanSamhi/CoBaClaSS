public boolean isCdmaSubscriptionAppPresent(){
    UiccCardApplication cdmaApplication = mUiccController.getUiccCardApplication(mPhoneId, UiccController.APP_FAM_3GPP2);
    return cdmaApplication != null && (cdmaApplication.getType() == AppType.APPTYPE_CSIM || cdmaApplication.getType() == AppType.APPTYPE_RUIM);
}