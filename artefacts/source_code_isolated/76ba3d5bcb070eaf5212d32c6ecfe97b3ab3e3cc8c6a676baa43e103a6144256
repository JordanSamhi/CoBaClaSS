public void setMultiSimProperties(int numOfActiveModems){
    String multiSimConfig;
    switch(numOfActiveModems) {
        case 3:
            multiSimConfig = TSTS;
            break;
        case 2:
            multiSimConfig = DSDS;
            break;
        default:
            multiSimConfig = SSSS;
    }
    log("setMultiSimProperties to " + multiSimConfig);
    TelephonyProperties.multi_sim_config(multiSimConfig);
}