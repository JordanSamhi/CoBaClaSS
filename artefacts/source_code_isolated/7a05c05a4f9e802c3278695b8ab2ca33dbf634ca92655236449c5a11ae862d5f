public synchronized void setMin(int min){
    if (mMaxInitialized) {
        if (min > mMax) {
            min = mMax;
        }
    }
    mMinInitialized = true;
    if (mMaxInitialized && min != mMin) {
        mMin = min;
        postInvalidate();
        if (mProgress < min) {
            mProgress = min;
        }
        refreshProgress(R.id.progress, mProgress, false, false);
    } else {
        mMin = min;
    }
}