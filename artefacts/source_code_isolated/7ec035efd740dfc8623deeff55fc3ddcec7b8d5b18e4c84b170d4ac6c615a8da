public void addHardwareDevice(int deviceId){
    TvInputHardwareInfo info = new TvInputHardwareInfo.Builder().deviceId(deviceId).type(TvInputHardwareInfo.TV_INPUT_TYPE_HDMI).audioType(DEVICE_NONE).audioAddress("0").hdmiPortId(0).build();
    mTvInputHardwareManager.onDeviceAvailable(info, null);
    return;
}