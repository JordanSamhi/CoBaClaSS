public void sendSms(int token, @IntRange(from = 0, to = 65535) int messageRef, @SmsMessage.Format String format, String smsc, boolean isRetry, byte[] pdu){
    try {
        onSendSmsResult(token, messageRef, SEND_STATUS_ERROR, SmsManager.RESULT_ERROR_GENERIC_FAILURE);
    } catch (RuntimeException e) {
        Log.e(LOG_TAG, "Can not send sms: " + e.getMessage());
    }
}