public final boolean hasFocusStateSpecified(){
    final int N = mNumChildren;
    final ChildDrawable[] array = mChildren;
    for (int i = 0; i < N; i++) {
        final Drawable dr = array[i].mDrawable;
        if (dr != null && dr.hasFocusStateSpecified()) {
            return true;
        }
    }
    return false;
}