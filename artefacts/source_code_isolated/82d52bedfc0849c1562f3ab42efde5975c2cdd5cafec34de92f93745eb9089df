public long getKernelUsedSizeKb(){
    long size = mInfos[Debug.MEMINFO_SHMEM] + mInfos[Debug.MEMINFO_SLAB_UNRECLAIMABLE] + mInfos[Debug.MEMINFO_VM_ALLOC_USED] + mInfos[Debug.MEMINFO_PAGE_TABLES];
    if (!Debug.isVmapStack()) {
        size += mInfos[Debug.MEMINFO_KERNEL_STACK];
    }
    return size;
}