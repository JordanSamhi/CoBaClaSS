public void setShown(boolean shown){
    if (shown) {
        View progressBar = getProgressBar();
        if (progressBar != null) {
            progressBar.setVisibility(View.VISIBLE);
        }
    } else {
        View progressBar = peekProgressBar();
        if (progressBar != null) {
            progressBar.setVisibility(View.GONE);
        }
    }
}