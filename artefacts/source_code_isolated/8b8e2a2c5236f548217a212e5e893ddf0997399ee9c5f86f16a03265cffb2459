public static Set<String> getAllowedMccMncsForLocationRestrictedScan(Context context){
    final long token = Binder.clearCallingIdentity();
    try {
        return SubscriptionController.getInstance().getAvailableSubscriptionInfoList(context.getOpPackageName(), context.getAttributionTag()).stream().flatMap(NetworkScanRequestTracker::getAllowableMccMncsFromSubscriptionInfo).collect(Collectors.toSet());
    } finally {
        Binder.restoreCallingIdentity(token);
    }
}