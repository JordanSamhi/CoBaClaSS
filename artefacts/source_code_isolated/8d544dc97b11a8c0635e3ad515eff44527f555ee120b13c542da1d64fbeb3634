public boolean openGuts(View view, int x, int y, NotificationMenuRowPlugin.MenuItem menuItem){
    if (menuItem.getGutsView() instanceof NotificationGuts.GutsContent) {
        NotificationGuts.GutsContent gutsView = (NotificationGuts.GutsContent) menuItem.getGutsView();
        if (gutsView.needsFalsingProtection()) {
            if (mStatusBarStateController instanceof StatusBarStateControllerImpl) {
                ((StatusBarStateControllerImpl) mStatusBarStateController).setLeaveOpenOnKeyguardHide(true);
            }
            Runnable r = () -> mMainHandler.post(() -> openGutsInternal(view, x, y, menuItem));
            mStatusBarLazy.get().executeRunnableDismissingKeyguard(r, null, false, true, true);
            return true;
        }
    }
    return openGutsInternal(view, x, y, menuItem);
}