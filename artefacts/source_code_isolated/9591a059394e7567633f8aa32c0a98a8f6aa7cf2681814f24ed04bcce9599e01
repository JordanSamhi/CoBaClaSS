public static Redirect from(final File file){
    if (file == null)
        throw new NullPointerException();
    return new Redirect() {

        public Type type() {
            return Type.READ;
        }

        public File file() {
            return file;
        }

        public String toString() {
            return "redirect to read from file \"" + file + "\"";
        }
    };
}