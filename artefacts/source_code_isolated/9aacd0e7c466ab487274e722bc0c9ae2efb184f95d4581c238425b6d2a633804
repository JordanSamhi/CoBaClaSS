public boolean canShare(){
    if (getWifiConfiguration() == null) {
        return false;
    }
    switch(mSecurity) {
        case SECURITY_NONE:
        case SECURITY_OWE:
        case SECURITY_WEP:
        case SECURITY_PSK:
        case SECURITY_SAE:
            return true;
        default:
            return false;
    }
}