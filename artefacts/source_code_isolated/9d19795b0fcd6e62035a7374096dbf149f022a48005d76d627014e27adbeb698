public static int appInfoFlags(AndroidPackage pkg, @Nullable PackageSetting pkgSetting){
    int pkgWithoutStateFlags = PackageInfoWithoutStateUtils.appInfoFlags(pkg) | flag(pkg.isSystem(), ApplicationInfo.FLAG_SYSTEM) | flag(pkg.isFactoryTest(), ApplicationInfo.FLAG_FACTORY_TEST);
    return appInfoFlags(pkgWithoutStateFlags, pkgSetting);
}