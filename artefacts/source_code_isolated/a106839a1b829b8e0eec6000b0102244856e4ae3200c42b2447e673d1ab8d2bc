public void transfer(String number, boolean isConfirmationRequired) throws ImsException{
    logi("transfer :: session=" + mSession + ", number=" + Rlog.pii(TAG, number) + ", isConfirmationRequired=" + isConfirmationRequired);
    synchronized (mLockObj) {
        if (mSession == null) {
            throw new ImsException("No call to transfer", ImsReasonInfo.CODE_LOCAL_CALL_TERMINATED);
        }
        try {
            mSession.transfer(number, isConfirmationRequired);
        } catch (Throwable t) {
            loge("transfer :: ", t);
            throw new ImsException("transfer()", t, 0);
        }
    }
}