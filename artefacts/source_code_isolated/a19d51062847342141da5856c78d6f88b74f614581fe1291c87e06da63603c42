public MacAddress getFactoryMacAddress(@NonNull String ifaceName){
    class AnswerBox {

        public MacAddress mac = null;
    }
    synchronized (sLock) {
        try {
            AnswerBox box = new AnswerBox();
            android.hardware.wifi.V1_3.IWifiStaIface sta13 = getWifiStaIfaceForV1_3Mockable(ifaceName);
            if (sta13 != null) {
                sta13.getFactoryMacAddress((status, macBytes) -> {
                    if (!ok(status))
                        return;
                    box.mac = MacAddress.fromBytes(macBytes);
                });
                return box.mac;
            }
            android.hardware.wifi.V1_4.IWifiApIface ap14 = getWifiApIfaceForV1_4Mockable(ifaceName);
            if (ap14 != null) {
                ap14.getFactoryMacAddress((status, macBytes) -> {
                    if (!ok(status))
                        return;
                    box.mac = MacAddress.fromBytes(macBytes);
                });
                return box.mac;
            }
        } catch (RemoteException e) {
            handleRemoteException(e);
            return null;
        }
    }
    return null;
}