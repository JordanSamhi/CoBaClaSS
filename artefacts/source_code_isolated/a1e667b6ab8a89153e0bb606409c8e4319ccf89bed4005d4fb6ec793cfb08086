public boolean isAppEligibleForBackup(String packageName){
    mContext.enforceCallingOrSelfPermission(android.Manifest.permission.BACKUP, "isAppEligibleForBackup");
    long oldToken = Binder.clearCallingIdentity();
    try {
        String callerLogString = "BMS.isAppEligibleForBackup";
        TransportClient transportClient = mTransportManager.getCurrentTransportClient(callerLogString);
        boolean eligible = AppBackupUtils.appIsRunningAndEligibleForBackupWithTransport(transportClient, packageName, mPackageManager, mUserId);
        if (transportClient != null) {
            mTransportManager.disposeOfTransportClient(transportClient, callerLogString);
        }
        return eligible;
    } finally {
        Binder.restoreCallingIdentity(oldToken);
    }
}