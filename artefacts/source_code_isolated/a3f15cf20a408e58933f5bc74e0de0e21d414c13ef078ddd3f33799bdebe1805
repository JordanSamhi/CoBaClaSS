public void showSimRequiredNotification(WifiConfiguration config, String carrier){
    String name;
    if (config.isPasspoint()) {
        name = config.providerFriendlyName;
    } else {
        name = config.SSID;
    }
    mNotificationManager.notify(SystemMessage.NOTE_ID_WIFI_SIM_REQUIRED, buildSimRequiredNotification(name, carrier));
}