public boolean isProfileOwner(int uid, @Nullable String packageName){
    if (packageName == null) {
        Log.e(TAG, "isProfileOwner: packageName is null, returning false");
        return false;
    }
    DevicePolicyManager devicePolicyManager = retrieveDevicePolicyManagerFromUserContext(uid);
    if (devicePolicyManager == null)
        return false;
    return devicePolicyManager.isProfileOwnerApp(packageName);
}