public boolean isEmbeddedSlotActivated(){
    UiccSlot[] slots = mUiccController.getUiccSlots();
    if (slots == null) {
        return false;
    }
    for (int i = 0; i < slots.length; ++i) {
        UiccSlot slotInfo = slots[i];
        if (slotInfo != null && !slotInfo.isRemovable() && slotInfo.isActive()) {
            return true;
        }
    }
    return false;
}