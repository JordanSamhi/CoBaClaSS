public static Redirect appendTo(final File file){
    if (file == null)
        throw new NullPointerException();
    return new Redirect() {

        public Type type() {
            return Type.APPEND;
        }

        public File file() {
            return file;
        }

        public String toString() {
            return "redirect to append to file \"" + file + "\"";
        }

        boolean append() {
            return true;
        }
    };
}