public byte[] verifyCredential(@NonNull LockscreenCredential credential, long challenge, int userId) throws RequestThrottledException{
    throwIfCalledOnMainThread();
    try {
        VerifyCredentialResponse response = getLockSettings().verifyCredential(credential, challenge, userId);
        if (response.getResponseCode() == VerifyCredentialResponse.RESPONSE_OK) {
            return response.getPayload();
        } else if (response.getResponseCode() == VerifyCredentialResponse.RESPONSE_RETRY) {
            throw new RequestThrottledException(response.getTimeout());
        } else {
            return null;
        }
    } catch (RemoteException re) {
        Log.e(TAG, "failed to verify credential", re);
        return null;
    }
}