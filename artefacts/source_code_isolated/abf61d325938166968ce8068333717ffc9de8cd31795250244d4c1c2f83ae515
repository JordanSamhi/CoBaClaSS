public String getImsiPrivileged(int subId){
    try (Cursor cursor = mContext.getContentResolver().query(SubscriptionManager.CONTENT_URI, null, SubscriptionManager.UNIQUE_KEY_SUBSCRIPTION_ID + "=?", new String[] { String.valueOf(subId) }, null)) {
        String imsi = null;
        if (cursor != null) {
            if (cursor.moveToNext()) {
                imsi = getOptionalStringFromCursor(cursor, SubscriptionManager.IMSI, null);
            }
        } else {
            logd("getImsiPrivileged: failed to retrieve imsi.");
        }
        return imsi;
    }
}