public void setRotation(int rotation){
    if (rotation != mRotation) {
        switch(rotation) {
            case ROTATION_0:
            case ROTATION_90:
            case ROTATION_180:
            case ROTATION_270:
                mRotation = rotation;
                computeRegions();
                break;
            default:
                Log.e(TAG, "Invalid rotation provided: " + rotation);
        }
    }
}