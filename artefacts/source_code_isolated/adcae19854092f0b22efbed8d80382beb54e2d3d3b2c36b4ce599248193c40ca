public void rCubicTo(float dx1, float dy1, float dx2, float dy2, float dx3, float dy3){
    if (!hasPoints()) {
        mPath.moveTo(mLastX = 0, mLastY = 0);
    }
    dx1 += mLastX;
    dy1 += mLastY;
    dx2 += mLastX;
    dy2 += mLastY;
    dx3 += mLastX;
    dy3 += mLastY;
    mPath.curveTo(dx1, dy1, dx2, dy2, mLastX = dx3, mLastY = dy3);
}