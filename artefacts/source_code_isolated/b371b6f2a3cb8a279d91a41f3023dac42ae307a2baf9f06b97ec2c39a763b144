public int setSingleRepeatingRequest(CaptureRequest request, Executor executor, CaptureCallback callback) throws CameraAccessException{
    if (executor == null) {
        throw new IllegalArgumentException("executor must not be null");
    } else if (callback == null) {
        throw new IllegalArgumentException("callback must not be null");
    }
    checkRepeatingRequest(request);
    synchronized (mDeviceImpl.mInterfaceLock) {
        checkNotClosed();
        executor = CameraDeviceImpl.checkExecutor(executor, callback);
        if (DEBUG) {
            Log.v(TAG, mIdString + "setRepeatingRequest - request " + request + ", callback " + callback + " executor" + " " + executor);
        }
        return addPendingSequence(mDeviceImpl.setRepeatingRequest(request, createCaptureCallbackProxyWithExecutor(executor, callback), mDeviceExecutor));
    }
}