public List<SharedLibraryInfo> getDeclaredSharedLibraries(@NonNull String packageName, @InstallFlags int flags){
    try {
        ParceledListSlice<SharedLibraryInfo> sharedLibraries = mPM.getDeclaredSharedLibraries(packageName, flags, mContext.getUserId());
        return sharedLibraries != null ? sharedLibraries.getList() : Collections.emptyList();
    } catch (RemoteException e) {
        throw e.rethrowFromSystemServer();
    }
}