public void updateResources(int orientation, Point displaySize){
    mScreenOrientation = orientation;
    mDisplaySize = displaySize;
    if (mLayout == null) {
        return;
    }
    Resources res = mLayout.getContext().getResources();
    mBubblePaddingTop = res.getDimensionPixelSize(R.dimen.bubble_padding_top);
    mStatusBarHeight = res.getDimensionPixelSize(com.android.internal.R.dimen.status_bar_height);
    mStackOffsetPx = res.getDimensionPixelSize(R.dimen.bubble_stack_offset);
    mBubblePaddingTop = res.getDimensionPixelSize(R.dimen.bubble_padding_top);
    mBubbleSizePx = res.getDimensionPixelSize(R.dimen.individual_bubble_size);
    mBubblesMaxRendered = res.getInteger(R.integer.bubbles_max_rendered);
    float totalGapWidth = getWidthForDisplayingBubbles() - (mExpandedViewPadding * 2) - (mBubblesMaxRendered + 1) * mBubbleSizePx;
    mSpaceBetweenBubbles = totalGapWidth / mBubblesMaxRendered;
}