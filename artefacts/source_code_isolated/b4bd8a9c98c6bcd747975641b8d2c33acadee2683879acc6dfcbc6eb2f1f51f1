public boolean canApplyTheme(){
    if (mThemeAttrs != null || super.canApplyTheme()) {
        return true;
    }
    final ChildDrawable[] array = mChildren;
    for (int i = 0; i < N_CHILDREN; i++) {
        final ChildDrawable layer = array[i];
        if (layer.canApplyTheme()) {
            return true;
        }
    }
    return false;
}