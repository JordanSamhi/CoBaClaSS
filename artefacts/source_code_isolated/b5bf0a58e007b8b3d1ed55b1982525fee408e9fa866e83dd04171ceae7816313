public int getContentPreviewRowCount(){
    if (shouldShowTabs()) {
        return 0;
    }
    if (!isSendAction(getTargetIntent())) {
        return 0;
    }
    if (mHideContentPreview || mChooserListAdapter == null || mChooserListAdapter.getCount() == 0) {
        return 0;
    }
    return 1;
}