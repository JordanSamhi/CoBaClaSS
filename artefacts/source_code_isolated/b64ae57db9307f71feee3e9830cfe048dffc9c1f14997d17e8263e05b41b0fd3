public boolean isValidationRequired(){
    final NetworkCapabilities nc = getNetworkCapabilities();
    return nc != null && nc.hasCapability(NetworkCapabilities.NET_CAPABILITY_INTERNET) && nc.hasCapability(NetworkCapabilities.NET_CAPABILITY_NOT_RESTRICTED) && nc.hasCapability(NetworkCapabilities.NET_CAPABILITY_TRUSTED) && nc.hasCapability(NetworkCapabilities.NET_CAPABILITY_NOT_VPN);
}