public void selectDevice(int logicalAddress, @NonNull @CallbackExecutor Executor executor, @NonNull OnSelectListener listener){
    Objects.requireNonNull(listener);
    try {
        mService.deviceSelect(logicalAddress, new IHdmiControlCallback.Stub() {

            @Override
            public void onComplete(int result) {
                Binder.withCleanCallingIdentity(() -> executor.execute(() -> listener.onSelect(result)));
            }
        });
    } catch (RemoteException e) {
        Log.e(TAG, "failed to select device: ", e);
        throw e.rethrowFromSystemServer();
    }
}