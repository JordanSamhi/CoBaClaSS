public int findParaIndex(@IntRange(from = 0) int pos){
    for (int i = 0; i < mParagraphInfo.length; ++i) {
        if (pos < mParagraphInfo[i].paragraphEnd) {
            return i;
        }
    }
    throw new IndexOutOfBoundsException("pos must be less than " + mParagraphInfo[mParagraphInfo.length - 1].paragraphEnd + ", gave " + pos);
}