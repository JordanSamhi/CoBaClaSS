public void testUpdateTransportAttributes_whenPermissionDenied_throwsSecurityException() throws Exception{
    setUpForUpdateTransportAttributes();
    mShadowContext.denyPermissions(android.Manifest.permission.BACKUP);
    UserBackupManagerService backupManagerService = createUserBackupManagerServiceAndRunTasks();
    expectThrows(SecurityException.class, () -> backupManagerService.updateTransportAttributes(mTransportUid, mTransportComponent, mTransportName, new Intent(), "currentDestinationString", new Intent(), "dataManagementLabel"));
}