public final void notifyCarrierNetworkChange(boolean active){
    TelephonyRegistryManager telephonyRegistryMgr = (TelephonyRegistryManager) this.getSystemService(Context.TELEPHONY_REGISTRY_SERVICE);
    if (telephonyRegistryMgr != null) {
        telephonyRegistryMgr.notifyCarrierNetworkChange(active);
    }
}