public static int navigationBarPosition(Resources res, int displayWidth, int displayHeight, int rotation){
    boolean navBarCanMove = displayWidth != displayHeight && res.getBoolean(com.android.internal.R.bool.config_navBarCanMove);
    if (navBarCanMove && displayWidth > displayHeight) {
        if (rotation == Surface.ROTATION_90) {
            return NAV_BAR_RIGHT;
        } else {
            return NAV_BAR_LEFT;
        }
    }
    return NAV_BAR_BOTTOM;
}