public static MeasuredParagraph buildForBidi(@NonNull CharSequence text, @IntRange(from = 0) int start, @IntRange(from = 0) int end, @NonNull TextDirectionHeuristic textDir, @Nullable MeasuredParagraph recycle){
    final MeasuredParagraph mt = recycle == null ? obtain() : recycle;
    mt.resetAndAnalyzeBidi(text, start, end, textDir);
    return mt;
}