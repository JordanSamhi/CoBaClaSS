public static String join(@NonNull CharSequence delimiter, @NonNull Iterable tokens){
    final Iterator<?> it = tokens.iterator();
    if (!it.hasNext()) {
        return "";
    }
    final StringBuilder sb = new StringBuilder();
    sb.append(it.next());
    while (it.hasNext()) {
        sb.append(delimiter);
        sb.append(it.next());
    }
    return sb.toString();
}