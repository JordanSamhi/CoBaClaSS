public boolean installKeyPair(@Nullable ComponentName admin, @NonNull PrivateKey privKey, @NonNull Certificate[] certs, @NonNull String alias, boolean requestAccess){
    int flags = INSTALLKEY_SET_USER_SELECTABLE;
    if (requestAccess) {
        flags |= INSTALLKEY_REQUEST_CREDENTIALS_ACCESS;
    }
    return installKeyPair(admin, privKey, certs, alias, flags);
}