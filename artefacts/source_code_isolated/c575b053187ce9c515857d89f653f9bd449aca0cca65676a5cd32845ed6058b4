public void close(){
    synchronized (mLock) {
        if (mIsClosed) {
            return;
        }
        int res = nativeClose();
        if (res != Tuner.RESULT_SUCCESS) {
            TunerUtils.throwExceptionForResult(res, "Failed to close LNB");
        } else {
            mIsClosed = true;
            mTuner.releaseLnb();
        }
    }
}