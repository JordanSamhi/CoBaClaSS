public void springStack(float destinationX, float destinationY, float stiffness){
    notifyFloatingCoordinatorStackAnimatingTo(destinationX, destinationY);
    springFirstBubbleWithStackFollowing(DynamicAnimation.TRANSLATION_X, new SpringForce().setStiffness(stiffness).setDampingRatio(SPRING_AFTER_FLING_DAMPING_RATIO), 0, destinationX);
    springFirstBubbleWithStackFollowing(DynamicAnimation.TRANSLATION_Y, new SpringForce().setStiffness(stiffness).setDampingRatio(SPRING_AFTER_FLING_DAMPING_RATIO), 0, destinationY);
}