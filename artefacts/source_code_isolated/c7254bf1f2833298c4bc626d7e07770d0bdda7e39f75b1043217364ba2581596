public static long[] appendLong(@Nullable long[] cur, long val, boolean allowDuplicates){
    if (cur == null) {
        return new long[] { val };
    }
    final int N = cur.length;
    if (!allowDuplicates) {
        for (int i = 0; i < N; i++) {
            if (cur[i] == val) {
                return cur;
            }
        }
    }
    long[] ret = new long[N + 1];
    System.arraycopy(cur, 0, ret, 0, N);
    ret[N] = val;
    return ret;
}