public AccountManagerFuture<Bundle> confirmCredentialsAsUser(final Account account, final Bundle options, final Activity activity, final AccountManagerCallback<Bundle> callback, final Handler handler, UserHandle userHandle){
    if (account == null)
        throw new IllegalArgumentException("account is null");
    final int userId = userHandle.getIdentifier();
    return new AmsTask(activity, handler, callback) {

        @Override
        public void doWork() throws RemoteException {
            mService.confirmCredentialsAsUser(mResponse, account, options, activity != null, userId);
        }
    }.start();
}