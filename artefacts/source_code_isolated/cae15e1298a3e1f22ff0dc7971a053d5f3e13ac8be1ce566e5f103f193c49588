public boolean hasIccCard(int slotIndex){
    try {
        ITelephony telephony = getITelephony();
        if (telephony == null)
            return false;
        return telephony.hasIccCardUsingSlotIndex(slotIndex);
    } catch (RemoteException ex) {
        return false;
    } catch (NullPointerException ex) {
        return false;
    }
}