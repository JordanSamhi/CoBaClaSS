public void sendPointerDown(IBinder token, int pointerId, int x, int y) throws RuntimeException{
    Objects.requireNonNull(token);
    if (DEBUG_KEYS)
        Log.d(TAG, "sendPointerDown() token: " + token + ", pointerId: " + pointerId);
    try {
        mRemoteServiceInput.sendPointerDown(token, pointerId, x, y);
    } catch (RemoteException re) {
        throw re.rethrowFromSystemServer();
    }
}