public int getPlatformKeyGenerationId(int userId){
    SQLiteDatabase db = mKeyStoreDbHelper.getReadableDatabase();
    String[] projection = { UserMetadataEntry.COLUMN_NAME_PLATFORM_KEY_GENERATION_ID };
    String selection = UserMetadataEntry.COLUMN_NAME_USER_ID + " = ?";
    String[] selectionArguments = { Integer.toString(userId) };
    try (Cursor cursor = db.query(UserMetadataEntry.TABLE_NAME, projection, selection, selectionArguments, null, null, null)) {
        if (cursor.getCount() == 0) {
            return -1;
        }
        cursor.moveToFirst();
        return cursor.getInt(cursor.getColumnIndexOrThrow(UserMetadataEntry.COLUMN_NAME_PLATFORM_KEY_GENERATION_ID));
    }
}