public SyncOperation createOneTimeSyncOperation(){
    if (!isPeriodic) {
        return null;
    }
    SyncOperation op = new SyncOperation(target, owningUid, owningPackage, reason, syncSource, mImmutableExtras, allowParallelSyncs, false, jobId, periodMillis, flexMillis, ContentResolver.SYNC_EXEMPTION_NONE);
    return op;
}