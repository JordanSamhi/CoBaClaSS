public Builder setNegativeButton(@NonNull CharSequence text, @NonNull @CallbackExecutor Executor executor, @NonNull DialogInterface.OnClickListener listener){
    if (TextUtils.isEmpty(text)) {
        throw new IllegalArgumentException("Text must be set and non-empty");
    }
    if (executor == null) {
        throw new IllegalArgumentException("Executor must not be null");
    }
    if (listener == null) {
        throw new IllegalArgumentException("Listener must not be null");
    }
    mBundle.putCharSequence(KEY_NEGATIVE_TEXT, text);
    mNegativeButtonInfo = new ButtonInfo(executor, listener);
    return this;
}