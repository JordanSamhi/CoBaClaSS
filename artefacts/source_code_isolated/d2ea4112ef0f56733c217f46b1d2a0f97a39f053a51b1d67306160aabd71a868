public KeyphraseSoundModel getKeyphraseSoundModel(String keyphrase, int userHandle, String bcp47Locale){
    bcp47Locale = Locale.forLanguageTag(bcp47Locale).toLanguageTag();
    synchronized (this) {
        String selectQuery = "SELECT  * FROM " + SoundModelContract.TABLE + " WHERE " + SoundModelContract.KEY_HINT_TEXT + "= '" + keyphrase + "' AND " + SoundModelContract.KEY_LOCALE + "='" + bcp47Locale + "'";
        return getValidKeyphraseSoundModelForUser(selectQuery, userHandle);
    }
}