public int unpackUsbInt(){
    if (available() >= 4) {
        int b0 = getUnsignedByte();
        int b1 = getUnsignedByte();
        int b2 = getUnsignedByte();
        int b3 = getUnsignedByte();
        return (b3 << 24) | (b2 << 16) | (b1 << 8) | b0;
    } else {
        throw new IndexOutOfBoundsException();
    }
}