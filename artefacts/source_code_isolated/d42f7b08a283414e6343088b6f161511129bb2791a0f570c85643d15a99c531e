public static ActivityOptions makeSplitScreenOptions(boolean dockTopLeft, boolean isPrimary){
    final ActivityOptions options = ActivityOptions.makeBasic();
    options.setLaunchWindowingMode(isPrimary ? WINDOWING_MODE_SPLIT_SCREEN_PRIMARY : WINDOWING_MODE_SPLIT_SCREEN_SECONDARY);
    options.setSplitScreenCreateMode(dockTopLeft ? SPLIT_SCREEN_CREATE_MODE_TOP_OR_LEFT : SPLIT_SCREEN_CREATE_MODE_BOTTOM_OR_RIGHT);
    return options;
}