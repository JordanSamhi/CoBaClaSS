public void notifyUpstream(boolean isCellular){
    if (DBG) {
        mLog.i("notifyUpstream: " + isCellular + ", mLastCellularUpstreamPermitted: " + mLastCellularUpstreamPermitted + ", mNeedReRunProvisioningUi: " + mNeedReRunProvisioningUi);
    }
    mUsingCellularAsUpstream = isCellular;
    if (mUsingCellularAsUpstream) {
        final TetheringConfiguration config = mFetcher.fetchTetheringConfiguration();
        maybeRunProvisioning(config);
    }
}