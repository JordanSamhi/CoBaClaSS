public boolean setPreferredDeviceForStrategy(@NonNull AudioProductStrategy strategy, @NonNull AudioDeviceAttributes device){
    Objects.requireNonNull(strategy);
    Objects.requireNonNull(device);
    try {
        final int status = getService().setPreferredDeviceForStrategy(strategy.getId(), device);
        return status == AudioSystem.SUCCESS;
    } catch (RemoteException e) {
        throw e.rethrowFromSystemServer();
    }
}