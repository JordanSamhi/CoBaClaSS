public BluetoothLeScanner getBluetoothLeScanner(){
    if (!getLeAccess()) {
        return null;
    }
    synchronized (mLock) {
        if (sBluetoothLeScanner == null) {
            sBluetoothLeScanner = new BluetoothLeScanner(mManagerService, getOpPackageName(), getAttributionTag());
        }
    }
    return sBluetoothLeScanner;
}