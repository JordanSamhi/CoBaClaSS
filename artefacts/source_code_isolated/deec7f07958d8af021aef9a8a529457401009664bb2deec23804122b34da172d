public void registerInterfaceAvailableListener(@NonNull HalDeviceManager.InterfaceAvailableForRequestListener listener, Handler handler){
    mInterfaceAvailableListener = new InterfaceAvailableListenerInternal(listener);
    mHalDeviceManager.registerStatusListener(() -> {
        if (mHalDeviceManager.isStarted()) {
            Log.i(TAG, "Registering for interface available listener");
            mHalDeviceManager.registerInterfaceAvailableForRequestListener(IfaceType.P2P, mInterfaceAvailableListener, handler);
        }
    }, handler);
    if (mHalDeviceManager.isStarted()) {
        mHalDeviceManager.registerInterfaceAvailableForRequestListener(IfaceType.P2P, mInterfaceAvailableListener, handler);
    }
}