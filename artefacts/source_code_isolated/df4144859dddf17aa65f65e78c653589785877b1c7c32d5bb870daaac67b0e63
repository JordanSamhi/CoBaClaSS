public boolean shouldPauseVideoFor(int source){
    synchronized (mPauseRequestsLock) {
        boolean wasPaused = isPaused();
        mPauseRequests.add(source);
        if (!wasPaused) {
            Log.i(LOG_TAG, String.format("shouldPauseVideoFor: source=%s, pendingRequests=%s - should pause", sourceToString(source), sourcesToString(mPauseRequests)));
            return true;
        } else {
            Log.i(LOG_TAG, String.format("shouldPauseVideoFor: source=%s, pendingRequests=%s - already paused", sourceToString(source), sourcesToString(mPauseRequests)));
            return false;
        }
    }
}