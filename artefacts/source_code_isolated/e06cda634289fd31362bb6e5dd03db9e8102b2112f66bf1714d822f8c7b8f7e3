public CertPath getRecoveryServiceCertPath(int userId, int uid, @NonNull String rootAlias){
    byte[] bytes = getBytes(userId, uid, rootAlias, RootOfTrustEntry.COLUMN_NAME_CERT_PATH);
    if (bytes == null) {
        return null;
    }
    try {
        return decodeCertPath(bytes);
    } catch (CertificateException e) {
        Log.wtf(TAG, String.format(Locale.US, "Recovery service CertPath entry cannot be decoded for " + "userId=%d uid=%d.", userId, uid), e);
        return null;
    }
}