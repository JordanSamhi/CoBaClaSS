public RemoteViews getDarkTextViews(){
    if (hasFlags(FLAG_USE_LIGHT_BACKGROUND_LAYOUT)) {
        return this;
    }
    try {
        addFlags(FLAG_USE_LIGHT_BACKGROUND_LAYOUT);
        return new RemoteViews(this);
    } finally {
        mApplyFlags &= ~FLAG_USE_LIGHT_BACKGROUND_LAYOUT;
    }
}