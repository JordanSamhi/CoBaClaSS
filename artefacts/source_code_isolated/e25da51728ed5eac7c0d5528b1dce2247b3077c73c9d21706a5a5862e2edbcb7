public void useWallpaperTextColor(boolean shouldUseWallpaperTextColor){
    if (shouldUseWallpaperTextColor == mUseWallpaperTextColors) {
        return;
    }
    mUseWallpaperTextColors = shouldUseWallpaperTextColor;
    if (mUseWallpaperTextColors) {
        updateColors(Utils.getColorAttrDefaultColor(mContext, R.attr.wallpaperTextColor), Utils.getColorAttrDefaultColor(mContext, R.attr.wallpaperTextColorSecondary), Utils.getColorAttrDefaultColor(mContext, R.attr.wallpaperTextColor));
    } else {
        updateColors(mNonAdaptedForegroundColor, mNonAdaptedBackgroundColor, mNonAdaptedSingleToneColor);
    }
}