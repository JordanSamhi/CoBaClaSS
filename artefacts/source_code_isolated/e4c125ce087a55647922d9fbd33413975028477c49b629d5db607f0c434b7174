public void onRtlPropertiesChanged(int layoutDirection){
    super.onRtlPropertiesChanged(layoutDirection);
    final TextDirectionHeuristic newTextDir = getTextDirectionHeuristic();
    if (mTextDir != newTextDir) {
        mTextDir = newTextDir;
        if (mLayout != null) {
            checkForRelayout();
        }
    }
}