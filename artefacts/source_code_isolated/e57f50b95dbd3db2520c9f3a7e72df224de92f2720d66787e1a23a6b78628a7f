public boolean setOutsideTouchable(boolean outsideTouchable, @Nullable PopupWindow.OnDismissListener onDismiss){
    boolean ret = false;
    if (mPopupWindow.isOutsideTouchable() ^ outsideTouchable) {
        mPopupWindow.setOutsideTouchable(outsideTouchable);
        mPopupWindow.setFocusable(!outsideTouchable);
        ret = true;
    }
    mPopupWindow.setOnDismissListener(onDismiss);
    return ret;
}