public void show(Bundle options){
    mShowing = true;
    mNotificationShadeWindowController.setKeyguardShowing(true);
    mKeyguardStateController.notifyKeyguardState(mShowing, mKeyguardStateController.isOccluded());
    reset(true);
    SysUiStatsLog.write(SysUiStatsLog.KEYGUARD_STATE_CHANGED, SysUiStatsLog.KEYGUARD_STATE_CHANGED__STATE__SHOWN);
}