public void setSelectionAfterHeaderView(){
    final int count = getHeaderViewsCount();
    if (count > 0) {
        mNextSelectedPosition = 0;
        return;
    }
    if (mAdapter != null) {
        setSelection(count);
    } else {
        mNextSelectedPosition = count;
        mLayoutMode = LAYOUT_SET_SELECTION;
    }
}