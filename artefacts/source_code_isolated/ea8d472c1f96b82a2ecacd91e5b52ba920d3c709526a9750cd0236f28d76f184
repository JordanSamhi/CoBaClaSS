public long[] getSampleComponent(ColorComponent component){
    switch(component) {
        case CHANNEL0:
            return mSamplesComponent0;
        case CHANNEL1:
            return mSamplesComponent1;
        case CHANNEL2:
            return mSamplesComponent2;
        case CHANNEL3:
            return mSamplesComponent3;
        default:
            throw new ArrayIndexOutOfBoundsException();
    }
}