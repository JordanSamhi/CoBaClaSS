public boolean dispatchMediaKeyEventAsSystemService(@NonNull MediaSession.Token sessionToken, @NonNull KeyEvent keyEvent){
    if (sessionToken == null) {
        throw new IllegalArgumentException("sessionToken shouldn't be null");
    }
    if (keyEvent == null) {
        throw new IllegalArgumentException("keyEvent shouldn't be null");
    }
    if (!KeyEvent.isMediaSessionKey(keyEvent.getKeyCode())) {
        return false;
    }
    try {
        return mService.dispatchMediaKeyEventToSessionAsSystemService(mContext.getPackageName(), sessionToken, keyEvent);
    } catch (RemoteException e) {
        Log.e(TAG, "Failed to send key event.", e);
    }
    return false;
}