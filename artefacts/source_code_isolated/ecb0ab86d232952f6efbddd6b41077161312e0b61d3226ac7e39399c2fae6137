public boolean isBondingInitiatedLocally(){
    final IBluetooth service = sService;
    if (service == null) {
        Log.w(TAG, "BT not enabled, isBondingInitiatedLocally failed");
        return false;
    }
    try {
        return service.isBondingInitiatedLocally(this);
    } catch (RemoteException e) {
        Log.e(TAG, "", e);
    }
    return false;
}