public OffloadController getOffloadController(@NonNull Handler h, @NonNull SharedLog log, @NonNull OffloadController.Dependencies deps){
    final NetworkStatsManager statsManager = (NetworkStatsManager) getContext().getSystemService(Context.NETWORK_STATS_SERVICE);
    return new OffloadController(h, getOffloadHardwareInterface(h, log), getContext().getContentResolver(), statsManager, log, deps);
}