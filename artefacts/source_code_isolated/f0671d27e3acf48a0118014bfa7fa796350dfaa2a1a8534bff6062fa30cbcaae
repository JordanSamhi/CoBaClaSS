public static UserBackupManagerService createUserBackupManagerServiceAndRunTasks(int userId, Context context, HandlerThread backupThread, File baseStateDir, File dataDir, TransportManager transportManager){
    UserBackupManagerService backupManagerService = UserBackupManagerService.createAndInitializeService(userId, context, new BackupManagerService(context), backupThread, baseStateDir, dataDir, transportManager);
    runToEndOfTasks(backupThread.getLooper());
    return backupManagerService;
}