public static String modeToString(int mode){
    switch(mode) {
        case MODE_CURRENT:
            return "MODE_CURRENT";
        case MODE_IN_CALL:
            return "MODE_IN_CALL";
        case MODE_IN_COMMUNICATION:
            return "MODE_IN_COMMUNICATION";
        case MODE_INVALID:
            return "MODE_INVALID";
        case MODE_NORMAL:
            return "MODE_NORMAL";
        case MODE_RINGTONE:
            return "MODE_RINGTONE";
        case MODE_CALL_SCREENING:
            return "MODE_CALL_SCREENING";
        default:
            return "unknown mode (" + mode + ")";
    }
}