public NotificationShadeWindowView getNotificationShadeWindowView(){
    if (mNotificationShadeWindowView != null) {
        return mNotificationShadeWindowView;
    }
    mNotificationShadeWindowView = (NotificationShadeWindowView) mInjectionInflationController.injectable(LayoutInflater.from(mContext)).inflate(R.layout.super_notification_shade, null);
    if (mNotificationShadeWindowView == null) {
        throw new IllegalStateException("R.layout.super_notification_shade could not be properly inflated");
    }
    LockIcon lockIcon = mNotificationShadeWindowView.findViewById(R.id.lock_icon);
    if (lockIcon != null) {
        mLockIconController.attach(lockIcon);
    }
    return mNotificationShadeWindowView;
}