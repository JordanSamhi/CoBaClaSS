public void inflate(@NonNull Resources r, @NonNull XmlPullParser parser, @NonNull AttributeSet attrs, @Nullable Theme theme) throws XmlPullParserException, IOException{
    final TypedArray a = obtainAttributes(r, theme, attrs, R.styleable.AnimatedStateListDrawable);
    super.inflateWithAttributes(r, parser, a, R.styleable.AnimatedStateListDrawable_visible);
    updateStateFromTypedArray(a);
    updateDensity(r);
    a.recycle();
    inflateChildElements(r, parser, attrs, theme);
    init();
}