public boolean isInEmergencySmsMode(){
    try {
        ITelephony telephony = getITelephony();
        if (telephony != null) {
            return telephony.isInEmergencySmsMode();
        }
    } catch (RemoteException ex) {
        Rlog.e(TAG, "isInEmergencySmsMode RemoteException", ex);
    }
    return false;
}