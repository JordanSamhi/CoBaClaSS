public String toString(){
    StringBuilder s = new StringBuilder();
    s.append("ProviderRequest[");
    if (reportLocation) {
        s.append("interval=");
        TimeUtils.formatDuration(interval, s);
        if (lowPowerMode) {
            s.append(", lowPowerMode");
        }
        if (locationSettingsIgnored) {
            s.append(", locationSettingsIgnored");
        }
    } else {
        s.append("OFF");
    }
    s.append(']');
    return s.toString();
}