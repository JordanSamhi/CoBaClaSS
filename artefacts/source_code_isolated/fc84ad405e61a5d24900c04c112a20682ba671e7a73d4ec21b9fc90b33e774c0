public synchronized void setDeviceAndProfileOwnerPackages(int deviceOwnerUserId, String deviceOwnerPackage, SparseArray<String> profileOwnerPackages){
    mDeviceOwnerUserId = deviceOwnerUserId;
    mDeviceOwnerPackage = (deviceOwnerUserId == UserHandle.USER_NULL) ? null : deviceOwnerPackage;
    mProfileOwnerPackages = (profileOwnerPackages == null) ? null : profileOwnerPackages.clone();
}