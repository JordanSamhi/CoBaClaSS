public ActivityManager.RunningTaskInfo getRunningTask(boolean filterOnlyVisibleRecents){
    try {
        List<ActivityManager.RunningTaskInfo> tasks = ActivityTaskManager.getService().getFilteredTasks(1, filterOnlyVisibleRecents);
        if (tasks.isEmpty()) {
            return null;
        }
        return tasks.get(0);
    } catch (RemoteException e) {
        return null;
    }
}